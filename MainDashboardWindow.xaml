<Window x:Class="CycleDesk.MainDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:controls="clr-namespace:CycleDesk.Controls"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="CycleDesk - Dashboard" 
        Height="900" 
        Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5"
        WindowState="Maximized">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFADB5BD"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Warstwa podstawowa -->
                            <Border Background="Transparent" CornerRadius="0"/>

                            <!-- HOVER GRADIENT -->
                            <Grid x:Name="hoverLayer" Opacity="0">
                                <!-- Biały pasek z lewej -->
                                <Border Width="3"
                               HorizontalAlignment="Left"
                               Background="White"/>

                                <!-- Gradient -->
                                <Border Margin="3,0,0,0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="#33FFFFFF" Offset="0"/>
                                            <!-- 20% -->
                                            <GradientStop Color="#03FFFFFF" Offset="1"/>
                                            <!-- 1% -->
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>

                            <!-- ACTIVE STATE (taki sam gradient!) -->
                            <Grid x:Name="activeLayer" Opacity="0">
                                <!-- Biały pasek z lewej -->
                                <Border Width="3"
                               HorizontalAlignment="Left"
                               Background="White"/>

                                <!-- Gradient -->
                                <Border Margin="3,0,0,0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="#33FFFFFF" Offset="0"/>
                                            <!-- 20% -->
                                            <GradientStop Color="#03FFFFFF" Offset="1"/>
                                            <!-- 1% -->
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>

                            <!-- Zawartość -->
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="Center"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- AKTYWNY PRZYCISK -->
                            <Trigger Property="Tag" Value="Active">
                                <Setter TargetName="activeLayer" Property="Opacity" Value="1"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>

                            <!-- HOVER (tylko dla nieaktywnych) -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="Tag" Value="{x:Null}"/>
                                </MultiTrigger.Conditions>
                                <MultiTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="hoverLayer"
                                                   Storyboard.TargetProperty="Opacity"
                                                   From="0" To="1"
                                                   Duration="0:0:0.25">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.EnterActions>
                                <MultiTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="hoverLayer"
                                                   Storyboard.TargetProperty="Opacity"
                                                   From="1" To="0"
                                                   Duration="0:0:0.25">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.ExitActions>
                                <Setter Property="Foreground" Value="White"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <controls:SideMenuControl x:Name="sideMenu" Grid.Column="0"/>

        <!-- GŁÓWNA ZAWARTOŚĆ -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Górny bar -->
            <Border Grid.Row="0" 
                   Background="White" 
                   BorderBrush="#FFE0E0E0" 
                   BorderThickness="0,0,0,1"
                   Padding="30,0">
                <Grid>
                    <TextBlock x:Name="lblPageTitle"
                              Text="Dashboard"
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="#FF2D3E50"
                              VerticalAlignment="Center"/>

                    <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='dddd, MMMM dd, yyyy'}"
                              FontSize="14"
                              Foreground="#FF6C757D"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto"
                         Padding="30">
                <StackPanel>

                    <!-- KPI Cards -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Card 1 -->
                        <Border Grid.Column="0" 
                               Background="White" 
                               CornerRadius="15"
                               Margin="0,0,15,0"
                               Padding="30"
                               Height="180">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" 
                                                ShadowDepth="0" 
                                                Opacity="0.1" 
                                                Color="Black"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                          Text="Today's Sales"
                                          FontSize="16"
                                          Foreground="#FF6C757D"
                                          Margin="0,0,0,15"/>

                                <TextBlock x:Name="txtTodaySales"
                                          Grid.Row="1"
                                          Text="0,00 PLN"
                                          FontSize="36"
                                          FontWeight="Bold"
                                          Foreground="#FF2D3E50"
                                          VerticalAlignment="Center"/>

                                <StackPanel Grid.Row="2" Orientation="Horizontal">
                                    <TextBlock x:Name="txtSalesChange"
                                              Text="↑ 0.0%"
                                              FontSize="14"
                                              Foreground="#FF28A745"
                                              FontWeight="SemiBold"
                                              Margin="0,0,8,0"/>
                                    <TextBlock Text="vs yesterday"
                                              FontSize="14"
                                              Foreground="#FF6C757D"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Card 2 -->
                        <Border Grid.Column="1" 
                               Background="White" 
                               CornerRadius="15"
                               Margin="0,0,15,0"
                               Padding="30"
                               Height="180">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" 
                                                ShadowDepth="0" 
                                                Opacity="0.1" 
                                                Color="Black"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                          Text="Transactions"
                                          FontSize="16"
                                          Foreground="#FF6C757D"
                                          Margin="0,0,0,15"/>

                                <TextBlock x:Name="txtTransactions"
                                          Grid.Row="1"
                                          Text="0"
                                          FontSize="36"
                                          FontWeight="Bold"
                                          Foreground="#FF2D3E50"
                                          VerticalAlignment="Center"/>

                                <StackPanel Grid.Row="2" Orientation="Horizontal">
                                    <TextBlock x:Name="txtTransactionsChange"
                                              Text="↑ 0.0%"
                                              FontSize="14"
                                              Foreground="#FF28A745"
                                              FontWeight="SemiBold"
                                              Margin="0,0,8,0"/>
                                    <TextBlock Text="vs yesterday"
                                              FontSize="14"
                                              Foreground="#FF6C757D"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Card 3 -->
                        <Border Grid.Column="2" 
                               Background="White" 
                               CornerRadius="15"
                               Margin="0,0,15,0"
                               Padding="30"
                               Height="180">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" 
                                                ShadowDepth="0" 
                                                Opacity="0.1" 
                                                Color="Black"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                          Text="Low Stock"
                                          FontSize="16"
                                          Foreground="#FF6C757D"
                                          Margin="0,0,0,15"/>

                                <StackPanel Grid.Row="1" VerticalAlignment="Center">
                                    <TextBlock x:Name="txtLowStock"
                                              Text="0"
                                              FontSize="36"
                                              FontWeight="Bold"
                                              Foreground="#FFFFC107"
                                              Margin="0,0,0,5"/>
                                    <TextBlock Text="products"
                                              FontSize="14"
                                              Foreground="#FF6C757D"/>
                                </StackPanel>

                                <TextBlock Grid.Row="2"
                                          Text="⚠️ Needs attention"
                                          FontSize="13"
                                          Foreground="#FFFFC107"
                                          FontWeight="SemiBold"/>
                            </Grid>
                        </Border>

                        <!-- Card 4 -->
                        <Border Grid.Column="3" 
                               Background="White" 
                               CornerRadius="15"
                               Padding="30"
                               Height="180">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" 
                                                ShadowDepth="0" 
                                                Opacity="0.1" 
                                                Color="Black"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                          Text="Warehouse Value"
                                          FontSize="16"
                                          Foreground="#FF6C757D"
                                          Margin="0,0,0,15"/>

                                <TextBlock x:Name="txtWarehouseValue"
                                          Grid.Row="1"
                                          Text="0 PLN"
                                          FontSize="36"
                                          FontWeight="Bold"
                                          Foreground="#FF2D3E50"
                                          VerticalAlignment="Center"/>

                                <TextBlock Grid.Row="2"
                                          Text="total inventory"
                                          FontSize="14"
                                          Foreground="#FF6C757D"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Chart Placeholder -->
                    <!-- Row 2: Sales Chart + Top 5 Products -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Sales Chart -->
                        <Border Grid.Column="0"
           Background="White" 
           CornerRadius="15"
           Margin="0,0,15,0"
           Padding="30">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" 
                            ShadowDepth="0" 
                            Opacity="0.1" 
                            Color="Black"/>
                            </Border.Effect>
                            <StackPanel>
                                <Grid Margin="0,0,0,20">
                                    <TextBlock Text="Sales (Last 7 Days)"
                          FontSize="18"
                          FontWeight="SemiBold"
                          Foreground="#FF2D3E50"/>

                                    <!-- Toggle buttons -->
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Border x:Name="btn7Days"
                           Background="#FF2D3E50"
                           CornerRadius="5"
                           Padding="12,6"
                           Margin="0,0,8,0"
                           Cursor="Hand"
                           MouseLeftButtonUp="ChartPeriod7Days_Click">
                                            <TextBlock Text="Last 7 Days"
                                  FontSize="12"
                                  Foreground="White"
                                  FontWeight="SemiBold"/>
                                        </Border>
                                        <Border x:Name="btn30Days"
                           Background="Transparent"
                           BorderBrush="#FFDEE2E6"
                           BorderThickness="1"
                           CornerRadius="5"
                           Padding="12,6"
                           Margin="0,0,8,0"
                           Cursor="Hand"
                           MouseLeftButtonUp="ChartPeriod30Days_Click">
                                            <TextBlock Text="Last 30 Days"
                                  FontSize="12"
                                  Foreground="#FF6C757D"/>
                                        </Border>
                                        <Border x:Name="btn90Days"
                           Background="Transparent"
                           BorderBrush="#FFDEE2E6"
                           BorderThickness="1"
                           CornerRadius="5"
                           Padding="12,6"
                           Cursor="Hand"
                           MouseLeftButtonUp="ChartPeriod90Days_Click">
                                            <TextBlock Text="Last 90 Days"
                                  FontSize="12"
                                  Foreground="#FF6C757D"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>

                                <!-- Chart Legend -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                        <Ellipse Width="12" Height="12" Fill="#FF4169E1" Margin="0,0,8,0"/>
                                        <TextBlock Text="Incomes" FontSize="12" Foreground="#FF6C757D"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="12" Height="12" Fill="#FF20C997" Margin="0,0,8,0"/>
                                        <TextBlock Text="Expenses" FontSize="12" Foreground="#FF6C757D"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Chart Canvas -->
                                <Border Height="300" 
                   Background="#FFF8F9FA"
                   CornerRadius="10"
                   Padding="10">
                                    <Canvas x:Name="chartCanvas" 
                                            ClipToBounds="True"/>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Top 5 Products -->
                        <Border Grid.Column="1"
           Background="White" 
           CornerRadius="15"
           Padding="25">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" 
                            ShadowDepth="0" 
                            Opacity="0.1" 
                            Color="Black"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="Top 5 Products (by Revenue)"
                      FontSize="16"
                      FontWeight="SemiBold"
                      Foreground="#FF2D3E50"
                      Margin="0,0,0,20"/>

                                <!-- Header -->
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Product" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D"/>
                                    <TextBlock Grid.Column="1" Text="Qty" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" TextAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="Revenue" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" TextAlignment="Right"/>
                                </Grid>

                                <!-- Dynamic Products Container -->
                                <StackPanel x:Name="topProductsPanel"/>

                                <!-- See Full Report -->
                                <TextBlock Text="See The Full Report ►"
                      FontSize="12"
                      Foreground="#FF4169E1"
                      Margin="0,15,0,0"
                      Cursor="Hand"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Row 3: Products to Order + Recent Goods Receipts -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Products to Order -->
                        <Border Grid.Column="0"
           Background="White" 
           CornerRadius="15"
           Margin="0,0,15,0"
           Padding="25">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" 
                            ShadowDepth="0" 
                            Opacity="0.1" 
                            Color="Black"/>
                            </Border.Effect>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                    <TextBlock Text="Products to Order"
                          FontSize="16"
                          FontWeight="SemiBold"
                          Foreground="#FF2D3E50"/>
                                    <TextBlock Text="⚠️"
                          FontSize="16"
                          Margin="8,0,0,0"/>
                                </StackPanel>

                                <!-- Header -->
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Product" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D"/>
                                    <TextBlock Grid.Column="1" Text="Stock" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" TextAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="Min" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" TextAlignment="Center"/>
                                </Grid>

                                <!-- Dynamic Products to Order Container -->
                                <StackPanel x:Name="productsToOrderPanel"/>

                                <!-- See Full Report -->
                                <TextBlock Text="See The Full Report ►"
                      FontSize="12"
                      Foreground="#FF4169E1"
                      Margin="0,15,0,0"
                      Cursor="Hand"/>
                            </StackPanel>
                        </Border>

                        <!-- Recent Goods Receipts -->
                        <Border Grid.Column="1"
           Background="White" 
           CornerRadius="15"
           Padding="30">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" 
                            ShadowDepth="0" 
                            Opacity="0.1" 
                            Color="Black"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="Recent Goods Receipts"
                      FontSize="16"
                      FontWeight="SemiBold"
                      Foreground="#FF2D3E50"
                      Margin="0,0,0,20"/>

                                <!-- Header -->
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Document No." FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" Margin="0,0,20,0"/>
                                    <TextBlock Grid.Column="1" Text="Supplier" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" Margin="0,0,20,0"/>
                                    <TextBlock Grid.Column="2" Text="Receipt Date" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" Margin="0,0,20,0"/>
                                    <TextBlock Grid.Column="3" Text="Value" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" Margin="0,0,20,0"/>
                                    <TextBlock Grid.Column="4" Text="Created By" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" Margin="0,0,20,0"/>
                                    <TextBlock Grid.Column="5" Text="Status" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" TextAlignment="Center"/>
                                </Grid>

                                <!-- Dynamic Goods Receipts Container -->
                                <StackPanel x:Name="goodsReceiptsPanel"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                   

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>