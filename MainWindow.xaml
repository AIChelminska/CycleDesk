<Window x:Class="CycleDesk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:CycleDesk.Views"
        Title="CycleDesk" 
        Height="800" 
        Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#FF0A0A0A"
        WindowState="Maximized">

    <Window.Resources>
        <CubicEase x:Key="EaseOut" EasingMode="EaseOut"/>

        <Storyboard x:Key="ShrinkLogoAnimation">
            <DoubleAnimation Storyboard.TargetName="LogoScaleTransform"
                           Storyboard.TargetProperty="ScaleX"
                           From="1.0" To="0.65" Duration="0:0:0.8"
                           EasingFunction="{StaticResource EaseOut}"/>
            <DoubleAnimation Storyboard.TargetName="LogoScaleTransform"
                           Storyboard.TargetProperty="ScaleY"
                           From="1.0" To="0.65" Duration="0:0:0.8"
                           EasingFunction="{StaticResource EaseOut}"/>
            <ThicknessAnimation Storyboard.TargetName="LogoContainer"
                              Storyboard.TargetProperty="Margin"
                              From="0,0,0,0" To="-10,-350,0,0" Duration="0:0:0.8"
                              EasingFunction="{StaticResource EaseOut}"/>
            <DoubleAnimation Storyboard.TargetName="ContentContainer"
                           Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.6"
                           BeginTime="0:0:0.4"/>
        </Storyboard>

        <Storyboard x:Key="FadeOutIn">
            <DoubleAnimation Storyboard.TargetName="ContentContainer"
                           Storyboard.TargetProperty="Opacity"
                           From="1" To="0" Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetName="ContentContainer"
                           Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.3"
                           BeginTime="0:0:0.3"/>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <StackPanel x:Name="LogoContainer"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   RenderTransformOrigin="0.5,0.5">
            <StackPanel.RenderTransform>
                <ScaleTransform x:Name="LogoScaleTransform" ScaleX="1" ScaleY="1"/>
            </StackPanel.RenderTransform>

            <Image Source="/Images/logo.png"
                   Width="700" 
                   Height="700" 
                   Margin="0,0,0,60"
                   RenderOptions.BitmapScalingMode="HighQuality"/>
        </StackPanel>

        <ContentControl x:Name="ContentContainer"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="0,150,0,0"
                       Opacity="0"/>
    </Grid>
</Window>