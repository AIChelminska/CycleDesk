<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="CycleDesk.CategoriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:CycleDesk.Controls"
        Title="CycleDesk - Categories" 
        Height="900" 
        Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5"
        WindowState="Maximized">

    <Window.Resources>
        <!-- ComboBox Style -->
        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#FFF8F9FA"/>
            <Setter Property="BorderBrush" Value="#FFDEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#FF2D3E50"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Focusable="False"
                                IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                               BorderBrush="{TemplateBinding BorderBrush}"
                                               BorderThickness="{TemplateBinding BorderThickness}"
                                               CornerRadius="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"
                                                        Margin="15,0,0,0"
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Left"/>
                                                <TextBlock Grid.Column="1"
                                                 Text="▼"
                                                 FontSize="10"
                                                 Foreground="#FF6C757D"
                                                 Margin="0,0,15,0"
                                                 VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <ContentPresenter x:Name="ContentSite"
                                    Content="{TemplateBinding SelectionBoxItem}"
                                    ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                    Margin="15,0,30,0"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    IsHitTestVisible="False"/>

                            <Popup x:Name="PART_Popup"
                          Placement="Bottom"
                          IsOpen="{TemplateBinding IsDropDownOpen}"
                          AllowsTransparency="True"
                          Focusable="False"
                          PopupAnimation="Slide">
                                <Border Background="White"
                               BorderBrush="#FFDEE2E6"
                               BorderThickness="1"
                               CornerRadius="8"
                               Margin="0,5,0,0"
                               MinWidth="{TemplateBinding ActualWidth}">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.15"/>
                                    </Border.Effect>
                                    <ScrollViewer MaxHeight="200" Margin="0">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Menu Button Style -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFADB5BD"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>

                            <!-- Warstwa podstawowa -->
                            <Border Background="Transparent" CornerRadius="0"/>

                            <!-- HOVER GRADIENT -->
                            <Grid x:Name="hoverLayer" Opacity="0">
                                <!-- Biały pasek z lewej -->
                                <Border Width="3"
                                   HorizontalAlignment="Left"
                                   Background="White"/>

                                <!-- Gradient -->
                                <Border Margin="3,0,0,0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="#33FFFFFF" Offset="0"/>
                                            <GradientStop Color="#03FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>

                            <!-- ACTIVE STATE (taki sam gradient!) -->
                            <Grid x:Name="activeLayer" Opacity="0">
                                <!-- Biały pasek z lewej -->
                                <Border Width="3"
                                   HorizontalAlignment="Left"
                                   Background="White"/>

                                <!-- Gradient -->
                                <Border Margin="3,0,0,0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="#33FFFFFF" Offset="0"/>
                                            <GradientStop Color="#03FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>

                            <!-- Zawartość -->
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="Center"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- AKTYWNY PRZYCISK -->
                            <Trigger Property="Tag" Value="Active">
                                <Setter TargetName="activeLayer" Property="Opacity" Value="1"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>

                            <!-- HOVER (tylko dla nieaktywnych) -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="Tag" Value="{x:Null}"/>
                                </MultiTrigger.Conditions>
                                <MultiTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="hoverLayer"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="0" To="1"
                                                         Duration="0:0:0.25">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.EnterActions>
                                <MultiTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="hoverLayer"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="1" To="0"
                                                         Duration="0:0:0.25">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.ExitActions>
                                <Setter Property="Foreground" Value="White"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Background="{TemplateBinding Background}"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="#FFF8F9FA"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FFE9ECEF"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <controls:SideMenuControl x:Name="sideMenu" DockPanel.Dock="Left" />
        
        <!-- GŁÓWNA ZAWARTOŚĆ -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Górny bar -->
            <Border Grid.Row="0" 
                   Background="White" 
                   BorderBrush="#FFE0E0E0" 
                   BorderThickness="0,0,0,1"
                   Padding="30,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="📋" FontSize="32" Margin="0,0,15,0"/>
                        <TextBlock Text="Categories"
                                  FontSize="28"
                                  FontWeight="Bold"
                                  Foreground="#FF2D3E50"
                                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <Button Content="➕ Add New Category"
       Height="45"
       Padding="25,0"
       Background="#FF2D3E50"
       Foreground="White"
       BorderThickness="0"
       FontWeight="SemiBold"
       FontSize="14"
       Cursor="Hand"
       HorizontalAlignment="Right"
       VerticalAlignment="Center"
       Click="OpenAddCategoryModal_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                               CornerRadius="10"
                               Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF1E2A36"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#FF141D28"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
             VerticalScrollBarVisibility="Auto"
             Padding="30">
                <Border Background="White"
           CornerRadius="15"
           Padding="30"
                    MaxWidth="1100">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" 
                            ShadowDepth="0" 
                            Opacity="0.1" 
                            Color="Black"/>
                    </Border.Effect>

                    <StackPanel>
                        <!-- Header Row -->
                        <Border Background="#FF2D3E50" CornerRadius="15,15,0,0" Margin="0,0,0,0">
                            <Grid Height="55" Margin="20,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Padding="0,0,15,0">
                                    <TextBlock Text="Category Name" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"
                                               Foreground="white" 
                                               VerticalAlignment="Center"/>
                                </Border>

                                <Border Grid.Column="1" Padding="15,0">
                                    <TextBlock Text="Products" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"
                                               Foreground="White" 
                                               VerticalAlignment="Center" 
                                               TextAlignment="Center"/>
                                </Border>

                                <Border Grid.Column="2" Padding="15,0">
                                    <TextBlock Text="Status" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"
                                               Foreground="white" 
                                               VerticalAlignment="Center" 
                                               TextAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Divider -->
                        <Rectangle Fill="#FFDEE2E6" Height="1"/>

                        <!-- Categories List -->
                        <Border Margin="20">
                            <StackPanel>
                                <!-- BIKES Category -->
                                <Grid Tag="Bikes" Cursor="Hand" MouseLeftButtonDown="ToggleCategory_Click">
                                    <Border Background="White" Padding="0,15">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Padding="0,0,15,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock x:Name="expandBikes" Text="▶" FontSize="12" Foreground="#FF6C757D" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                                    <TextBlock Text="Bikes" FontSize="14" Foreground="#FF2D3E50" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>

                                            <Border Grid.Column="1" Padding="15,0">
                                                <TextBlock Text="45" FontSize="13" Foreground="#FF2D3E50" VerticalAlignment="Center" TextAlignment="Center" FontWeight="SemiBold"/>
                                            </Border>

                                            <Border Grid.Column="2" Padding="15,0">
                                                <Ellipse Width="10" Height="10" Fill="#FF28A745" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </Grid>

                                <!-- Bikes Subcategories -->
                                <StackPanel x:Name="subcategoriesBikes" Visibility="Collapsed" Margin="30,5,0,10">
                                    <Border Background="#FFF8F9FA" Margin="0,0,0,2">
                                        <Grid Height="45">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Padding="15,0">
                                                <TextBlock Text="Mountain Bikes" FontSize="13" Foreground="#FF495057" VerticalAlignment="Center"/>
                                            </Border>

                                            <Border Grid.Column="1" Padding="15,0">
                                                <TextBlock Text="15" FontSize="12" Foreground="#FF495057" VerticalAlignment="Center" TextAlignment="Center"/>
                                            </Border>

                                            <Border Grid.Column="2" Padding="15,0">
                                                <Ellipse Width="8" Height="8" Fill="#FF28A745" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                    </Border>

                                    <Border Background="#FFF8F9FA" Margin="0,0,0,2">
                                        <Grid Height="45">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Padding="15,0">
                                                <TextBlock Text="Road Bikes" FontSize="13" Foreground="#FF495057" VerticalAlignment="Center"/>
                                            </Border>

                                            <Border Grid.Column="1" Padding="15,0">
                                                <TextBlock Text="20" FontSize="12" Foreground="#FF495057" VerticalAlignment="Center" TextAlignment="Center"/>
                                            </Border>

                                            <Border Grid.Column="2" Padding="15,0">
                                                <Ellipse Width="8" Height="8" Fill="#FF28A745" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                    </Border>

                                    <Border Background="#FFF8F9FA">
                                        <Grid Height="45">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Padding="15,0">
                                                <TextBlock Text="Electric Bikes" FontSize="13" Foreground="#FF495057" VerticalAlignment="Center"/>
                                            </Border>

                                            <Border Grid.Column="1" Padding="15,0">
                                                <TextBlock Text="10" FontSize="12" Foreground="#FF495057" VerticalAlignment="Center" TextAlignment="Center"/>
                                            </Border>

                                            <Border Grid.Column="2" Padding="15,0">
                                                <Ellipse Width="8" Height="8" Fill="#FFFFC107" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- Divider between categories -->
                                <Rectangle Fill="#FFDEE2E6" Height="1" Margin="0,10"/>

                                <!-- TIRES Category -->
                                <Grid Tag="Tires" Cursor="Hand" MouseLeftButtonDown="ToggleCategory_Click">
                                    <Border Background="White" Padding="0,15">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Padding="0,0,15,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock x:Name="expandTires" Text="▶" FontSize="12" Foreground="#FF6C757D" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                                    <TextBlock Text="Tires" FontSize="14" Foreground="#FF2D3E50" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>

                                            <Border Grid.Column="1" Padding="15,0">
                                                <TextBlock Text="28" FontSize="13" Foreground="#FF2D3E50" VerticalAlignment="Center" TextAlignment="Center" FontWeight="SemiBold"/>
                                            </Border>

                                            <Border Grid.Column="2" Padding="15,0">
                                                <Ellipse Width="10" Height="10" Fill="#FF28A745" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </Grid>

                                <!-- Tires Subcategories -->
                                <StackPanel x:Name="subcategoriesTires" Visibility="Collapsed" Margin="30,5,0,10">
                                    <Border Background="#FFF8F9FA" Margin="0,0,0,2">
                                        <Grid Height="45">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Padding="15,0">
                                                <TextBlock Text="Mountain Bike Tires" FontSize="13" Foreground="#FF495057" VerticalAlignment="Center"/>
                                            </Border>

                                            <Border Grid.Column="1" Padding="15,0">
                                                <TextBlock Text="12" FontSize="12" Foreground="#FF495057" VerticalAlignment="Center" TextAlignment="Center"/>
                                            </Border>

                                            <Border Grid.Column="2" Padding="15,0">
                                                <Ellipse Width="8" Height="8" Fill="#FF28A745" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                    </Border>

                                    <Border Background="#FFF8F9FA">
                                        <Grid Height="45">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Padding="15,0">
                                                <TextBlock Text="Road Bike Tires" FontSize="13" Foreground="#FF495057" VerticalAlignment="Center"/>
                                            </Border>

                                            <Border Grid.Column="1" Padding="15,0">
                                                <TextBlock Text="16" FontSize="12" Foreground="#FF495057" VerticalAlignment="Center" TextAlignment="Center"/>
                                            </Border>

                                            <Border Grid.Column="2" Padding="15,0">
                                                <Ellipse Width="8" Height="8" Fill="#FF28A745" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- Divider -->
                                <Rectangle Fill="#FFDEE2E6" Height="1" Margin="0,10"/>

                                <!-- CHAINS Category -->
                                <Border Background="White">
                                    <Grid Height="55">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Padding="20,0">
                                            <TextBlock Text="Chains" FontSize="14" Foreground="#FF2D3E50" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        </Border>

                                        <Border Grid.Column="1" Padding="15,0">
                                            <TextBlock Text="12" FontSize="13" Foreground="#FF2D3E50" VerticalAlignment="Center" TextAlignment="Center" FontWeight="SemiBold"/>
                                        </Border>

                                        <Border Grid.Column="2" Padding="15,0">
                                            <Ellipse Width="10" Height="10" Fill="#FF28A745" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>

                                <!-- BRAKES Category -->
                                <Border Background="White">
                                    <Grid Height="55">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Padding="20,0">
                                            <TextBlock Text="Brakes" FontSize="14" Foreground="#FF2D3E50" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        </Border>

                                        <Border Grid.Column="1" Padding="15,0">
                                            <TextBlock Text="8" FontSize="13" Foreground="#FF2D3E50" VerticalAlignment="Center" TextAlignment="Center" FontWeight="SemiBold"/>
                                        </Border>

                                        <Border Grid.Column="2" Padding="15,0">
                                            <Ellipse Width="10" Height="10" Fill="#FF28A745" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </ScrollViewer>
        </Grid>

        <!-- ADD CATEGORY MODAL OVERLAY -->
        <Grid x:Name="modalOverlay" Grid.ColumnSpan="2" Background="#80000000" Visibility="Collapsed">
            <Border Background="White" 
                    CornerRadius="15" 
                    Width="500" 
                    Height="350"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="5" BlurRadius="20" Opacity="0.2"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="80"/>
                    </Grid.RowDefinitions>

                    <!-- HEADER -->
                    <Grid Grid.Row="0">
                        <!-- Usuń Background stąd -->
                        <Border Background="#FFF8F9FA" CornerRadius="15,15,0,0">
                            <!-- Dodaj Border z górnym CornerRadius -->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="1"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Margin="30,0">
                            <TextBlock Text="Add New Categories" 
                                       FontSize="20" 
                                       FontWeight="Bold"
                                       Foreground="#FF2D3E50"
                                       VerticalAlignment="Center"/>

                            <Button x:Name="btnCloseModal"
                                    Width="30" Height="30"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="CloseModal_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="6">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFEEEEEE"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <TextBlock Text="✕" FontSize="16" Foreground="#FF6C757D"/>
                            </Button>
                        </Grid>

                                <Rectangle Grid.Row="1" Fill="#FFDEE2E6" Height="1"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- FORM CONTENT -->
                    <ScrollViewer Grid.Row="1" Margin="30,25">
                        <StackPanel>
                            <!-- Category Name -->
                            <StackPanel Margin="0,0,0,25">
                                <TextBlock Text="Category Name:"
                                          FontSize="13"
                                          Foreground="#FF6C757D"
                                          Margin="0,0,0,8"/>
                                <TextBox x:Name="txtCategoryName"
                                        Height="45"
                                        Padding="15,0"
                                        FontSize="14"
                                        BorderBrush="#FFDEE2E6"
                                        BorderThickness="1"
                                        Background="White"
                                        VerticalContentAlignment="Center">
                                    <TextBox.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="8"/>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>
                            </StackPanel>

                            <!-- Parent Category -->
                            <StackPanel Margin="0,0,0,25">
                                <TextBlock Text="Parent Category:"
                                          FontSize="13"
                                          Foreground="#FF6C757D"
                                          Margin="0,0,0,8"/>
                                <ComboBox x:Name="cmbParentCategory"
                                         Height="45"
                                         FontSize="14"
                                         Padding="15,0"
                                         BorderBrush="#FFDEE2E6"
                                         Style="{StaticResource FilterComboBoxStyle}">
                                    <ComboBoxItem Content="None (Main Category)" IsSelected="True"/>
                                    <ComboBoxItem Content="Bikes"/>
                                    <ComboBoxItem Content="Tires"/>
                                    <ComboBoxItem Content="Chains"/>
                                    <ComboBoxItem Content="Brakes"/>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer Buttons -->
                    <Grid Grid.Row="2" Margin="30,0,30,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Cancel Button -->
                        <Button Grid.Column="0"
                               Content="Cancel"
                               Height="50"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Background="#FFF8F9FA"
                               Foreground="#FF6C757D"
                               BorderThickness="1"
                               BorderBrush="#FFDEE2E6"
                               Cursor=""
                               Click="CancelModal_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="{TemplateBinding BorderThickness}"
                                                       CornerRadius="10">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFE9ECEF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Save Button -->
                        <Button Grid.Column="2"
                               Content="Save"
                               Height="50"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Background="#FF2D3E50"
                               Foreground="White"
                               BorderThickness="0"
                               Cursor="Hand"
                               Click="SaveCategory_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       CornerRadius="10">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF1E2A36"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#FF141D28"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>