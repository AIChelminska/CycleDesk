                                <ComboBoxItem Content="-- Select Product --" IsSelected="True"/>
                                <ComboBoxItem Content="Mountain Bike - Trek X-Caliber 8"/>
                                <ComboBoxItem Content="Road Bike - Specialized Allez"/>
                                <ComboBoxItem Content="City Bike - Giant Escape 3"/>
                                <ComboBoxItem Content="Electric Bike - Cannondale Quick Neo"/>
                                <ComboBoxItem Content="BMX Bike - Mongoose Legion L100"/>
                                <ComboBoxItem Content="Helmet - Giro Syntax MIPS"/>
                                <ComboBoxItem Content="Bike Lock - Kryptonite Evolution"/>
                                <ComboBoxItem Content="Water Bottle - CamelBak Podium"/>
                                <ComboBoxItem Content="Bike Pump - Topeak JoeBlow Sport III"/>
                                <ComboBoxItem Content="Cycling Gloves - Pearl Izumi Elite"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Quantity -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Quantity:"
                                      FontSize="13"
                                      Foreground="#FF6C757D"
                                      Margin="0,0,0,8"/>
                            <TextBox x:Name="productModalTxtQuantity"
                                    Height="45"
                                    Padding="12,0"
                                    FontSize="14"
                                    BorderBrush="#FFDEE2E6"
                                    BorderThickness="1"
                                    VerticalContentAlignment="Center">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </StackPanel>

                        <!-- Purchase Price -->
                        <StackPanel Margin="0,0,0,0">
                            <TextBlock Text="Purchase Price:"
                                      FontSize="13"
                                      Foreground="#FF6C757D"
                                      Margin="0,0,0,8"/>
                            <Grid>
                                <TextBox x:Name="productModalTxtPurchasePrice"
                                        Height="45"
                                        Padding="12,0,60,0"
                                        FontSize="14"
                                        BorderBrush="#FFDEE2E6"
                                        BorderThickness="1"
                                        VerticalContentAlignment="Center">
                                    <TextBox.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="8"/>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>
                                <TextBlock Text="PLN"
                                          FontSize="13"
                                          Foreground="#FF6C757D"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Right"
                                          Margin="0,0,15,0"
                                          IsHitTestVisible="False"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>

                    <!-- Footer Buttons -->
                    <Grid Grid.Row="2" Margin="0,30,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Cancel Button -->
                        <Button Grid.Column="0"
                               Content="Cancel"
                               Height="50"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Background="#FFF8F9FA"
                               Foreground="#FF6C757D"
                               BorderThickness="1"
                               BorderBrush="#FFDEE2E6"
                               Cursor="Hand"
                               Click="CloseProductModal_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="{TemplateBinding BorderThickness}"
                                                       CornerRadius="10">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFE9ECEF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Add Button -->
                        <Button Grid.Column="2"
                               Content="Add to Receipt"
                               Height="50"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Background="#FF2D3E50"
                               Foreground="White"
                               BorderThickness="0"
                               Cursor="Hand"
                               Click="AddProductToReceipt_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       CornerRadius="10">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF1E2A36"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#FF141D28"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>