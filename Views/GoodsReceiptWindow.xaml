<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="CycleDesk.GoodsReceiptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:CycleDesk.Controls"
        Title="CycleDesk - Goods Receipt" 
        Height="900" 
        Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5"
        WindowState="Maximized">

    <Window.Resources>
        <!-- ComboBox Style for Filters -->
        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#FFF8F9FA"/>
            <Setter Property="BorderBrush" Value="#FFDEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#FF2D3E50"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                         Background="{TemplateBinding Background}"
                                         BorderBrush="{TemplateBinding BorderBrush}"
                                         BorderThickness="{TemplateBinding BorderThickness}"
                                         Focusable="False"
                                         IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                         ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                               BorderBrush="{TemplateBinding BorderBrush}"
                                               BorderThickness="{TemplateBinding BorderThickness}"
                                               CornerRadius="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0" Margin="15,0,0,0"
                                                                 VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                                <TextBlock Grid.Column="1" Text="▼" FontSize="10"
                                                          Foreground="#FF6C757D" Margin="0,0,15,0" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <ContentPresenter x:Name="ContentSite"
                                             Content="{TemplateBinding SelectionBoxItem}"
                                             ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                             Margin="15,0,30,0" VerticalAlignment="Center"
                                             HorizontalAlignment="Left" IsHitTestVisible="False"/>

                            <Popup x:Name="PART_Popup" Placement="Bottom"
                                  IsOpen="{TemplateBinding IsDropDownOpen}"
                                  AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Border Background="White" BorderBrush="#FFDEE2E6" BorderThickness="1"
                                       CornerRadius="8" Margin="0,5,0,0" MinWidth="{TemplateBinding ActualWidth}">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.15"/>
                                    </Border.Effect>
                                    <ScrollViewer MaxHeight="200" Margin="0">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBoxItem Style - NAPRAWIONY -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter 
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="#FFF8F9FA"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FFE9ECEF"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <controls:SideMenuControl x:Name="sideMenu" DockPanel.Dock="Left" />

        <!-- GŁÓWNA ZAWARTOŚĆ -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Górny bar -->
            <Border Grid.Row="0" Background="White" BorderBrush="#FFE0E0E0" 
                   BorderThickness="0,0,0,1" Padding="30,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="📦" FontSize="32" Margin="0,0,15,0"/>
                        <TextBlock Text="Goods Receipt" FontSize="28" FontWeight="Bold"
                                  Foreground="#FF2D3E50" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Button Content="➕ New Receipt" Height="45" Padding="25,0"
                           Background="#FF2D3E50" Foreground="White" BorderThickness="0"
                           FontWeight="SemiBold" FontSize="14" Cursor="Hand"
                           HorizontalAlignment="Right" VerticalAlignment="Center"
                           Click="AddNewReceipt_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="10" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF1E2A36"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30">
                <StackPanel>

                    <!-- KPI CARDS -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Pending Card -->
                        <Border Grid.Column="0" Background="White" CornerRadius="15"
                               Margin="0,0,15,0" Padding="30" Height="180">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1" Color="Black"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Pending" FontSize="16"
                                          Foreground="#FF6C757D" Margin="0,0,0,15"/>
                                <TextBlock x:Name="txtPendingCount" Grid.Row="1" Text="0"
                                          FontSize="36" FontWeight="Bold"
                                          Foreground="#FF2D3E50" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="2" Text="⏳ Awaiting approval"
                                          FontSize="13" Foreground="#FFFFC107" FontWeight="SemiBold"/>
                            </Grid>
                        </Border>

                        <!-- Cancelled Card -->
                        <Border Grid.Column="1" Background="White" CornerRadius="15"
                               Margin="0,0,15,0" Padding="30" Height="180">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1" Color="Black"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Cancelled" FontSize="16"
                                          Foreground="#FF6C757D" Margin="0,0,0,15"/>
                                <TextBlock x:Name="txtRejectedCount" Grid.Row="1" Text="0"
                                          FontSize="36" FontWeight="Bold"
                                          Foreground="#FF2D3E50" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="2" Text="⚠️ Needs attention"
                                          FontSize="13" Foreground="#FFDC3545" FontWeight="SemiBold"/>
                            </Grid>
                        </Border>

                        <!-- Received Card -->
                        <Border Grid.Column="2" Background="White" CornerRadius="15"
                               Margin="0,0,15,0" Padding="30" Height="180">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1" Color="Black"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Received" FontSize="16"
                                          Foreground="#FF6C757D" Margin="0,0,0,15"/>
                                <TextBlock x:Name="txtApprovedCount" Grid.Row="1" Text="0"
                                          FontSize="36" FontWeight="Bold"
                                          Foreground="#FF2D3E50" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="2" Text="✓ Completed"
                                          FontSize="13" Foreground="#FF28A745" FontWeight="SemiBold"/>
                            </Grid>
                        </Border>

                        <!-- Total Value Card -->
                        <Border Grid.Column="3" Background="White" CornerRadius="15"
                               Padding="30" Height="180">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1" Color="Black"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0" Text="Total Value" FontSize="16"
                                          Foreground="#FF6C757D" Margin="0,0,0,15"/>
                                <TextBlock x:Name="txtTotalValue" Grid.Row="1" Text="0 PLN"
                                          FontSize="32" FontWeight="Bold"
                                          Foreground="#FF2D3E50" VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="2" Text="this month"
                                          FontSize="13" Foreground="#FF6C757D" FontWeight="SemiBold"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Search and Filters -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="350"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Box -->
                        <Border Grid.Column="0" Background="#FFF8F9FA" CornerRadius="10"
                               Padding="15,12" BorderBrush="#FFDEE2E6" BorderThickness="1">
                            <Grid>
                                <Viewbox Width="18" Height="18" HorizontalAlignment="Left"
                                        VerticalAlignment="Center" Margin="0,0,10,0">
                                    <Canvas Width="24" Height="24">
                                        <Path Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                              Fill="#FF2D3E50"/>
                                    </Canvas>
                                </Viewbox>
                                <TextBox x:Name="txtSearch" Text="" FontSize="14"
                                        TextChanged="SearchTextBox_TextChanged"
                                        Foreground="#FF2D3E50" Background="Transparent"
                                        BorderThickness="0" VerticalAlignment="Center" Padding="35,0,0,0">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Style.Triggers>
                                                <Trigger Property="Text" Value="">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                                <VisualBrush.Visual>
                                                                    <TextBlock Text="Search receipt..." 
                                                                              Foreground="#FF6C757D" 
                                                                              FontSize="14" Margin="30,0,0,0"/>
                                                                </VisualBrush.Visual>
                                                            </VisualBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </Grid>
                        </Border>

                        <!-- Filters -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <ComboBox x:Name="cmbSupplier" Width="150" Height="44" FontSize="13"
                                     Margin="0,0,10,0" Style="{StaticResource FilterComboBoxStyle}"
                                     SelectionChanged="cmbSupplier_SelectionChanged">
                                <ComboBoxItem Content="All Suppliers" IsSelected="True" Tag="0"/>
                            </ComboBox>

                            <ComboBox x:Name="cmbStatus" Width="150" Height="44" FontSize="13"
                                     Margin="0,0,10,0" Style="{StaticResource FilterComboBoxStyle}"
                                     SelectionChanged="cmbStatus_SelectionChanged">
                                <ComboBoxItem Content="All Status" IsSelected="True"/>
                                <ComboBoxItem Content="Received"/>
                                <ComboBoxItem Content="Pending"/>
                                <ComboBoxItem Content="Cancelled"/>
                            </ComboBox>

                            <ComboBox x:Name="cmbCreatedBy" Width="150" Height="44" FontSize="13"
                                     Margin="0,0,10,0" Style="{StaticResource FilterComboBoxStyle}"
                                     SelectionChanged="cmbCreatedBy_SelectionChanged">
                                <ComboBoxItem Content="All Users" IsSelected="True" Tag="0"/>
                            </ComboBox>

                            <Button Width="44" Height="44" Margin="0,0,10,0"
                                   Background="#FFF8F9FA" BorderBrush="#FFDEE2E6"
                                   BorderThickness="1" Cursor="Hand" Click="RefreshButton_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                           BorderBrush="{TemplateBinding BorderBrush}"
                                                           BorderThickness="{TemplateBinding BorderThickness}"
                                                           CornerRadius="8">
                                                        <Viewbox Width="18" Height="18">
                                                            <Canvas Width="24" Height="24">
                                                                <Path Data="M17.65 6.35C16.2 4.9 14.21 4 12 4c-4.42 0-7.99 3.58-7.99 8s3.57 8 7.99 8c3.73 0 6.84-2.55 7.73-6h-2.08c-.82 2.33-3.04 4-5.65 4-3.31 0-6-2.69-6-6s2.69-6 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35z"
                                                                      Fill="#FF2D3E50"/>
                                                            </Canvas>
                                                        </Viewbox>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFE9ECEF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button Content="📥 Export CSV" Height="44" Padding="22,0"
                                   Background="#FF2D3E50" Foreground="White" BorderThickness="0"
                                   FontSize="13" FontWeight="SemiBold" Cursor="Hand"
                                   Click="ExportCSV_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                           CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF1E293B"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Table -->
                    <Border BorderBrush="#FFDEE2E6" BorderThickness="1" CornerRadius="15">
                        <StackPanel>
                            <Border Background="#FF2D3E50" CornerRadius="15,15,0,0" Height="50">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" BorderBrush="#FF4A5568" BorderThickness="0,0,1,0" Padding="15,0">
                                        <TextBlock Text="Doc No." FontSize="12" FontWeight="SemiBold"
                                                  Foreground="White" VerticalAlignment="Center" TextAlignment="Center"/>
                                    </Border>
                                    <Border Grid.Column="1" BorderBrush="#FF4A5568" BorderThickness="0,0,1,0" Padding="15,0">
                                        <TextBlock Text="Supplier" FontSize="12" FontWeight="SemiBold"
                                                  Foreground="White" VerticalAlignment="Center" TextAlignment="Center"/>
                                    </Border>
                                    <Border Grid.Column="2" BorderBrush="#FF4A5568" BorderThickness="0,0,1,0" Padding="15,0">
                                        <TextBlock Text="Date" FontSize="12" FontWeight="SemiBold"
                                                  Foreground="White" VerticalAlignment="Center" TextAlignment="Center"/>
                                    </Border>
                                    <Border Grid.Column="3" BorderBrush="#FF4A5568" BorderThickness="0,0,1,0" Padding="15,0">
                                        <TextBlock Text="Value" FontSize="12" FontWeight="SemiBold"
                                                  Foreground="White" VerticalAlignment="Center" TextAlignment="Center"/>
                                    </Border>
                                    <Border Grid.Column="4" BorderBrush="#FF4A5568" BorderThickness="0,0,1,0" Padding="15,0">
                                        <TextBlock Text="Items" FontSize="12" FontWeight="SemiBold"
                                                  Foreground="White" VerticalAlignment="Center" TextAlignment="Center"/>
                                    </Border>
                                    <Border Grid.Column="5" BorderBrush="#FF4A5568" BorderThickness="0,0,1,0" Padding="15,0">
                                        <TextBlock Text="Status" FontSize="12" FontWeight="SemiBold"
                                                  Foreground="White" VerticalAlignment="Center" TextAlignment="Center"/>
                                    </Border>
                                    <Border Grid.Column="6" Padding="15,0">
                                        <TextBlock Text="Created By" FontSize="12" FontWeight="SemiBold"
                                                  Foreground="White" VerticalAlignment="Center" TextAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Border>

                            <StackPanel x:Name="receiptsContainer"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- ADD/EDIT RECEIPT MODAL -->
        <Grid x:Name="modalOverlay" Grid.ColumnSpan="2" Background="#80000000" Visibility="Collapsed">
            <Border Background="White" CornerRadius="15" Width="750" MaxHeight="900"
                   VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="5" BlurRadius="20" Opacity="0.2"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="80"/>
                    </Grid.RowDefinitions>

                    <!-- HEADER -->
                    <Border Grid.Row="0" Background="#FFF8F9FA" CornerRadius="15,15,0,0">
                        <Grid Margin="30,0">
                            <TextBlock Text="New Goods Receipt" FontSize="20" FontWeight="Bold"
                                      Foreground="#FF2D3E50" VerticalAlignment="Center"/>
                            <Button Width="30" Height="30" HorizontalAlignment="Right"
                                   VerticalAlignment="Center" Background="Transparent"
                                   BorderThickness="0" Cursor="Hand" Click="CloseModal_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFEEEEEE"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <TextBlock Text="✕" FontSize="16" Foreground="#FF6C757D"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- FORM CONTENT -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="30,20">
                        <StackPanel>
                            <!-- Row 1: Receipt No, Date, Received By -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Receipt No:" FontSize="13" Foreground="#FF6C757D" Margin="0,0,0,8"/>
                                    <TextBox x:Name="modalTxtReceiptNo" Height="45" Padding="12,0" FontSize="14"
                                            BorderBrush="#FFDEE2E6" BorderThickness="1" IsReadOnly="True"
                                            Background="#FFF8F9FA" VerticalContentAlignment="Center">
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="8"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Document Date:" FontSize="13" Foreground="#FF6C757D" Margin="0,0,0,8"/>
                                    <DatePicker x:Name="modalDatePickerDocument" Height="45" FontSize="14"
                                               BorderBrush="#FFDEE2E6" BorderThickness="1"
                                               VerticalContentAlignment="Center" Padding="10,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="4">
                                    <TextBlock Text="Received By:" FontSize="13" Foreground="#FF6C757D" Margin="0,0,0,8"/>
                                    <TextBox x:Name="modalTxtReceivedBy" Height="45" Padding="12,0" FontSize="14"
                                            BorderBrush="#FFDEE2E6" BorderThickness="1" IsReadOnly="True"
                                            Background="#FFF8F9FA" VerticalContentAlignment="Center">
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="8"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </StackPanel>
                            </Grid>

                            <!-- Supplier z SelectionChanged -->
                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="Supplier:" FontSize="13" Foreground="#FF6C757D" Margin="0,0,0,8"/>
                                <ComboBox x:Name="modalCmbSupplier" Height="45" FontSize="14"
                                         Style="{StaticResource FilterComboBoxStyle}"
                                         SelectionChanged="ModalCmbSupplier_SelectionChanged">
                                    <ComboBoxItem Content="Select supplier..." IsSelected="True" Tag="0"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Row 2: Supplier Invoice No, Supplier Invoice Date -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Supplier Invoice No:" FontSize="13" Foreground="#FF6C757D" Margin="0,0,0,8"/>
                                    <TextBox x:Name="modalTxtSupplierInvoiceNo" Height="45" Padding="12,0" FontSize="14"
                                            BorderBrush="#FFDEE2E6" BorderThickness="1" VerticalContentAlignment="Center">
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="8"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Supplier Invoice Date:" FontSize="13" Foreground="#FF6C757D" Margin="0,0,0,8"/>
                                    <DatePicker x:Name="modalDatePickerSupplierInvoice" Height="45" FontSize="14"
                                               BorderBrush="#FFDEE2E6" BorderThickness="1"
                                               VerticalContentAlignment="Center" Padding="10,0"/>
                                </StackPanel>
                            </Grid>

                            <!-- Products Section -->
                            <StackPanel Margin="0,0,0,20">
                                <Grid Margin="0,0,0,10">
                                    <TextBlock Text="Products:" FontSize="13" Foreground="#FF6C757D" VerticalAlignment="Center"/>
                                    <Button Content="+ Add Product" HorizontalAlignment="Right" Height="35" Padding="15,0"
                                           Background="#FF2D3E50" Foreground="White" BorderThickness="0"
                                           FontSize="12" FontWeight="SemiBold" Cursor="Hand" Click="AddProduct_Click">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}"
                                                                   CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FF1E2A36"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>

                                <Border BorderBrush="#FFDEE2E6" BorderThickness="1" CornerRadius="8" MinHeight="120">
                                    <DataGrid x:Name="dgProducts" AutoGenerateColumns="False" CanUserAddRows="False"
                                             HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                                             BorderThickness="0" Background="Transparent">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="*"/>
                                            <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="60"/>
                                            <DataGridTextColumn Header="Price" Binding="{Binding UnitPrice, StringFormat=N2}" Width="80"/>
                                            <DataGridTextColumn Header="Total" Binding="{Binding TotalPrice, StringFormat=N2}" Width="90"/>
                                            <DataGridTemplateColumn Width="40">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button Content="✕" Width="24" Height="24" FontSize="12"
                                                               Background="#FFF8D7DA" Foreground="#FFDC3545"
                                                               BorderThickness="0" Cursor="Hand"
                                                               Click="RemoveProduct_Click">
                                                            <Button.Style>
                                                                <Style TargetType="Button">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="Button">
                                                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </Button.Style>
                                                        </Button>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Border>
                            </StackPanel>

                            <!-- Total Value -->
                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="Total Value:" FontSize="13" Foreground="#FF6C757D" Margin="0,0,0,8"/>
                                <Grid>
                                    <TextBox x:Name="modalTxtTotalValue" Height="45" Padding="12,0,60,0" FontSize="14"
                                            BorderBrush="#FFDEE2E6" BorderThickness="1" IsReadOnly="True"
                                            Background="#FFF8F9FA" VerticalContentAlignment="Center" Text="0.00">
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="8"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                    <TextBlock Text="PLN" FontSize="13" Foreground="#FF6C757D"
                                              VerticalAlignment="Center" HorizontalAlignment="Right"
                                              Margin="0,0,15,0" IsHitTestVisible="False"/>
                                </Grid>
                            </StackPanel>

                            <!-- Notes -->
                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="Notes (optional):" FontSize="13" Foreground="#FF6C757D" Margin="0,0,0,8"/>
                                <TextBox x:Name="modalTxtNotes" Height="70" Padding="12,10" FontSize="14"
                                        BorderBrush="#FFDEE2E6" BorderThickness="1" TextWrapping="Wrap"
                                        AcceptsReturn="True" VerticalScrollBarVisibility="Auto">
                                    <TextBox.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="8"/>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>
                            </StackPanel>

                            <!-- Status Toggle -->
                            <StackPanel Margin="0,0,0,10">
                                <Grid>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="Status:" FontSize="13" Foreground="#FF6C757D" Margin="0,0,15,0"/>
                                        <TextBlock x:Name="modalStatusLabel" Text="Received" FontSize="13"
                                                  FontWeight="SemiBold" Foreground="#FF059669"/>
                                    </StackPanel>
                                    <CheckBox x:Name="modalToggleSwitch" HorizontalAlignment="Right"
                                             Checked="ToggleSwitch_Checked" Unchecked="ToggleSwitch_Unchecked">
                                        <CheckBox.Template>
                                            <ControlTemplate TargetType="CheckBox">
                                                <Grid>
                                                    <Border x:Name="track" Width="50" Height="26" CornerRadius="13"
                                                           Background="#FFD4EDDA"/>
                                                    <Border x:Name="thumb" Width="22" Height="22" CornerRadius="11"
                                                           Background="White" HorizontalAlignment="Left" Margin="2,0,0,0">
                                                        <Border.Effect>
                                                            <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.2"/>
                                                        </Border.Effect>
                                                    </Border>
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="track" Property="Background" Value="#FFF8D7DA"/>
                                                        <Setter TargetName="thumb" Property="HorizontalAlignment" Value="Right"/>
                                                        <Setter TargetName="thumb" Property="Margin" Value="0,0,2,0"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </CheckBox.Template>
                                    </CheckBox>
                                </Grid>

                                <Border x:Name="modalWarningRejected" Background="#FFF8D7DA" CornerRadius="8"
                                       Padding="15,10" Margin="0,15,0,0" Visibility="Collapsed">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="⚠️" FontSize="14" Margin="0,0,10,0"/>
                                        <TextBlock Text="Cancelled deliveries require photo documentation."
                                                  FontSize="13" Foreground="#FFDC3545"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer Buttons -->
                    <Grid Grid.Row="2" Margin="30,0,30,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="Cancel" Height="50" FontSize="15"
                               FontWeight="SemiBold" Background="#FFF8F9FA" Foreground="#FF6C757D"
                               BorderThickness="1" BorderBrush="#FFDEE2E6" Cursor="Hand"
                               Click="CloseModal_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="{TemplateBinding BorderThickness}"
                                                       CornerRadius="10">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFE9ECEF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Grid.Column="2" Content="Save Receipt" Height="50" FontSize="15"
                               FontWeight="SemiBold" Background="#FF2D3E50" Foreground="White"
                               BorderThickness="0" Cursor="Hand" Click="SaveReceipt_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF1E2A36"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- ADD PRODUCT MODAL -->
        <Grid x:Name="productModalOverlay" Grid.ColumnSpan="2" Background="#80000000" Visibility="Collapsed">
            <Border Background="White" CornerRadius="15" Width="450" Height="450"
                   VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="Black" ShadowDepth="5" BlurRadius="20" Opacity="0.2"/>
                </Border.Effect>
                <Grid Margin="30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Add Product to Receipt" FontSize="18"
                              FontWeight="Bold" Foreground="#FF2D3E50" Margin="0,0,0,20"/>

                    <StackPanel Grid.Row="1">
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Product:" FontSize="13" Foreground="#FF6C757D" Margin="0,0,0,8"/>
                            <ComboBox x:Name="productModalCmbProduct" Height="45" FontSize="14"
                                     Style="{StaticResource FilterComboBoxStyle}"
                                     SelectionChanged="ProductModalCmbProduct_SelectionChanged">
                                <ComboBoxItem Content="Select product..." IsSelected="True" Tag="0"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Quantity:" FontSize="13" Foreground="#FF6C757D" Margin="0,0,0,8"/>
                            <TextBox x:Name="productModalTxtQuantity" Height="45" Padding="12,0" FontSize="14"
                                    BorderBrush="#FFDEE2E6" BorderThickness="1" VerticalContentAlignment="Center">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Purchase Price:" FontSize="13" Foreground="#FF6C757D" Margin="0,0,0,8"/>
                            <Grid>
                                <TextBox x:Name="productModalTxtPurchasePrice" Height="45" Padding="12,0,60,0"
                                        FontSize="14" BorderBrush="#FFDEE2E6" BorderThickness="1"
                                        VerticalContentAlignment="Center">
                                    <TextBox.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="8"/>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>
                                <TextBlock Text="PLN" FontSize="13" Foreground="#FF6C757D"
                                          VerticalAlignment="Center" HorizontalAlignment="Right"
                                          Margin="0,0,15,0" IsHitTestVisible="False"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>

                    <Grid Grid.Row="2" Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="Cancel" Height="50" FontSize="15"
                               FontWeight="SemiBold" Background="#FFF8F9FA" Foreground="#FF6C757D"
                               BorderThickness="1" BorderBrush="#FFDEE2E6" Cursor="Hand"
                               Click="CloseProductModal_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="{TemplateBinding BorderThickness}"
                                                       CornerRadius="10">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFE9ECEF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Grid.Column="2" Content="Add to Receipt" Height="50" FontSize="15"
                               FontWeight="SemiBold" Background="#FF2D3E50" Foreground="White"
                               BorderThickness="0" Cursor="Hand" Click="AddProductToReceipt_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF1E2A36"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>