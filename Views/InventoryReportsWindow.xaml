<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="CycleDesk.InventoryReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:CycleDesk.Controls"
        Title="CycleDesk - Inventory Reports" 
        Height="900" 
        Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5"
        WindowState="Maximized">

    <Window.Resources>
        <!-- MENU BUTTON STYLE -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFADB5BD"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border Background="Transparent" CornerRadius="0"/>
                            <Grid x:Name="hoverLayer" Opacity="0">
                                <Border Width="3" HorizontalAlignment="Left" Background="White"/>
                                <Border Margin="3,0,0,0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="#33FFFFFF" Offset="0"/>
                                            <GradientStop Color="#03FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>
                            <Grid x:Name="activeLayer" Opacity="0">
                                <Border Width="3" HorizontalAlignment="Left" Background="White"/>
                                <Border Margin="3,0,0,0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="#33FFFFFF" Offset="0"/>
                                            <GradientStop Color="#03FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Tag" Value="Active">
                                <Setter TargetName="activeLayer" Property="Opacity" Value="1"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="Tag" Value="{x:Null}"/>
                                </MultiTrigger.Conditions>
                                <MultiTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="hoverLayer"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="0" To="1" Duration="0:0:0.25">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.EnterActions>
                                <MultiTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="hoverLayer"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="1" To="0" Duration="0:0:0.25">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.ExitActions>
                                <Setter Property="Foreground" Value="White"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- SUBMENU BUTTON STYLE -->
        <Style x:Key="SubmenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFADB5BD"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="45,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#1AFFFFFF"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFDEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#FF2D3E50"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Focusable="False"
                                        IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                               BorderBrush="{TemplateBinding BorderBrush}"
                                               BorderThickness="{TemplateBinding BorderThickness}"
                                               CornerRadius="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"
                                                                Margin="15,0,0,0"
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Left"/>
                                                <TextBlock Grid.Column="1"
                                                         Text="▼"
                                                         FontSize="10"
                                                         Foreground="#FF6C757D"
                                                         Margin="0,0,15,0"
                                                         VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            Margin="15,0,30,0"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            IsHitTestVisible="False"/>
                            <Popup x:Name="PART_Popup"
                                  Placement="Bottom"
                                  IsOpen="{TemplateBinding IsDropDownOpen}"
                                  AllowsTransparency="True"
                                  Focusable="False"
                                  PopupAnimation="Slide">
                                <Border Background="White"
                                       BorderBrush="#FFDEE2E6"
                                       BorderThickness="1"
                                       CornerRadius="8"
                                       Margin="0,5,0,0"
                                       MinWidth="{TemplateBinding ActualWidth}">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.15"/>
                                    </Border.Effect>
                                    <ScrollViewer MaxHeight="200" Margin="0">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="#FFF8F9FA"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FFE9ECEF"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <controls:SideMenuControl x:Name="sideMenu" DockPanel.Dock="Left" />

        <!-- ===== MAIN CONTENT ===== -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar -->
            <Border Grid.Row="0" Background="White" Padding="30,20" BorderBrush="#FFDEE2E6" BorderThickness="0,0,0,1">
                <Grid>
                    <TextBlock Text="📦 Inventory Reports" FontSize="28" FontWeight="Bold" Foreground="#FF2D3E50" VerticalAlignment="Center"/>
                    <TextBlock Text="Tuesday, November 18, 2025" FontSize="13" Foreground="#FF6C757D" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <!-- Content Area -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="30" MaxWidth="1800">

                    <!-- FILTER PANEL -->
                    <Border Background="White" CornerRadius="12" Padding="25" Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.08"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <StackPanel Margin="0,0,20,0">
                                    <TextBlock Text="Category" FontSize="12" Foreground="#FF6C757D" Margin="0,0,0,8"/>
                                    <ComboBox x:Name="cmbCategory" Width="200" Style="{StaticResource FilterComboBoxStyle}" 
                                              SelectionChanged="Filter_SelectionChanged"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,20,0">
                                    <TextBlock Text="Stock Status" FontSize="12" Foreground="#FF6C757D" Margin="0,0,0,8"/>
                                    <ComboBox x:Name="cmbStockStatus" Width="200" Style="{StaticResource FilterComboBoxStyle}" 
                                              SelectionChanged="Filter_SelectionChanged"/>
                                </StackPanel>
                            </StackPanel>

                            <Button Grid.Column="1" Content="🔄 Generate Report" Height="42" Padding="25,0"
                                    Background="#FF2D3E50" Foreground="White" BorderThickness="0"
                                    FontSize="14" FontWeight="SemiBold" Cursor="Hand"
                                    Click="GenerateReport_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF1a252f"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- KPI CARDS GRID -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Card 1: Total Products -->
                        <Border Grid.Row="0" Grid.Column="0" Background="White" CornerRadius="12" Padding="25" Margin="0,0,10,10">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.08"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="📦" FontSize="32" HorizontalAlignment="Left"/>
                                <TextBlock x:Name="txtTotalProducts" Text="126" FontSize="28" FontWeight="Bold" Foreground="#FF2D3E50" Margin="0,10,0,0"/>
                                <TextBlock Text="Total Products" FontSize="13" Foreground="#FF6C757D" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Card 2: Stock Value -->
                        <Border Grid.Row="0" Grid.Column="1" Background="White" CornerRadius="12" Padding="25" Margin="5,0,5,10">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.08"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="💰" FontSize="32" HorizontalAlignment="Left"/>
                                <TextBlock x:Name="txtStockValue" Text="PLN 127,845.50" FontSize="24" FontWeight="Bold" Foreground="#FF2D3E50" Margin="0,10,0,0"/>
                                <TextBlock Text="Total Stock Value" FontSize="13" Foreground="#FF6C757D" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Card 3: Low Stock -->
                        <Border Grid.Row="0" Grid.Column="2" Background="White" CornerRadius="12" Padding="25" Margin="10,0,0,10">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.08"/>
                            </Border.Effect>
                            <StackPanel>
                                <Grid>
                                    <TextBlock Text="⚠️" FontSize="32" HorizontalAlignment="Left"/>
                                    <Border Background="#FFFEF3CD" CornerRadius="6" Padding="8,4" HorizontalAlignment="Right" VerticalAlignment="Top">
                                        <TextBlock x:Name="txtLowStockPercent" Text="15.2%" FontSize="11" Foreground="#FFFFC107" FontWeight="SemiBold"/>
                                    </Border>
                                </Grid>
                                <TextBlock x:Name="txtLowStockCount" Text="8" FontSize="28" FontWeight="Bold" Foreground="#FFFFC107" Margin="0,10,0,0"/>
                                <TextBlock Text="Low Stock Items" FontSize="13" Foreground="#FF6C757D" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Card 4: Out of Stock -->
                        <Border Grid.Row="1" Grid.Column="0" Background="White" CornerRadius="12" Padding="25" Margin="0,0,10,0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.08"/>
                            </Border.Effect>
                            <StackPanel>
                                <Grid>
                                    <TextBlock Text="🚫" FontSize="32" HorizontalAlignment="Left"/>
                                    <Border Background="#FFF8D7DA" CornerRadius="6" Padding="8,4" HorizontalAlignment="Right" VerticalAlignment="Top">
                                        <TextBlock x:Name="txtOutOfStockPercent" Text="7.9%" FontSize="11" Foreground="#FFDC3545" FontWeight="SemiBold"/>
                                    </Border>
                                </Grid>
                                <TextBlock x:Name="txtOutOfStockCount" Text="2" FontSize="28" FontWeight="Bold" Foreground="#FFDC3545" Margin="0,10,0,0"/>
                                <TextBlock Text="Out of Stock" FontSize="13" Foreground="#FF6C757D" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Card 5: Categories -->
                        <Border Grid.Row="1" Grid.Column="1" Background="White" CornerRadius="12" Padding="25" Margin="5,0,5,0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.08"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="🗂️" FontSize="32" HorizontalAlignment="Left"/>
                                <TextBlock x:Name="txtCategoriesCount" Text="5" FontSize="28" FontWeight="Bold" Foreground="#FF2D3E50" Margin="0,10,0,0"/>
                                <TextBlock Text="Categories" FontSize="13" Foreground="#FF6C757D" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Card 6: Average Stock -->
                        <Border Grid.Row="1" Grid.Column="2" Background="White" CornerRadius="12" Padding="25" Margin="10,0,0,0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.08"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="📊" FontSize="32" HorizontalAlignment="Left"/>
                                <TextBlock x:Name="txtAvgStock" Text="16.5 units" FontSize="24" FontWeight="Bold" Foreground="#FF2D3E50" Margin="0,10,0,0"/>
                                <TextBlock Text="Avg Stock Level" FontSize="13" Foreground="#FF6C757D" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- STOCK STATUS BREAKDOWN -->
                    <Border Background="White" CornerRadius="12" Padding="25" Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.08"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="📊 Stock Status Distribution" FontSize="18" FontWeight="SemiBold" Foreground="#FF2D3E50" Margin="0,0,0,20"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- In Stock -->
                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                    <Border Background="#FFD4EDDA" Width="120" Height="120" CornerRadius="60" Padding="20">
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock x:Name="txtInStockCount" Text="97" FontSize="32" FontWeight="Bold" Foreground="#FF28A745" HorizontalAlignment="Center"/>
                                            <TextBlock x:Name="txtInStockPercent" Text="76.9%" FontSize="14" Foreground="#FF28A745" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <TextBlock Text="In Stock" FontSize="14" FontWeight="SemiBold" Foreground="#FF2D3E50" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                </StackPanel>

                                <!-- Low Stock -->
                                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                    <Border Background="#FFFEF3CD" Width="120" Height="120" CornerRadius="60" Padding="20">
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock x:Name="txtLowStockCountBreakdown" Text="19" FontSize="32" FontWeight="Bold" Foreground="#FFFFC107" HorizontalAlignment="Center"/>
                                            <TextBlock x:Name="txtLowStockPercentBreakdown" Text="15.1%" FontSize="14" Foreground="#FFFFC107" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <TextBlock Text="Low Stock" FontSize="14" FontWeight="SemiBold" Foreground="#FF2D3E50" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                </StackPanel>

                                <!-- Out of Stock -->
                                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                    <Border Background="#FFF8D7DA" Width="120" Height="120" CornerRadius="60" Padding="20">
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock x:Name="txtOutOfStockCountBreakdown" Text="10" FontSize="32" FontWeight="Bold" Foreground="#FFDC3545" HorizontalAlignment="Center"/>
                                            <TextBlock x:Name="txtOutOfStockPercentBreakdown" Text="7.9%" FontSize="14" Foreground="#FFDC3545" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <TextBlock Text="Out of Stock" FontSize="14" FontWeight="SemiBold" Foreground="#FF2D3E50" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- STOCK VALUE BY CATEGORY TABLE -->
                    <Border Background="White" CornerRadius="12" Padding="25" Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.08"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="📊 Stock Value by Category" FontSize="18" FontWeight="SemiBold" Foreground="#FF2D3E50" Margin="0,0,0,20"/>

                            <StackPanel x:Name="categoryStockPanel">
                                <!-- Header -->
                                <Border Background="#FFF8F9FA" CornerRadius="8,8,0,0" Padding="0,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="1.5*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="CATEGORY" FontSize="12" FontWeight="SemiBold" Foreground="#FF6C757D"/>
                                        <TextBlock Grid.Column="1" Text="PRODUCTS" FontSize="12" FontWeight="SemiBold" Foreground="#FF6C757D" TextAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="STOCK" FontSize="12" FontWeight="SemiBold" Foreground="#FF6C757D" TextAlignment="Center"/>
                                        <TextBlock Grid.Column="3" Text="VALUE" FontSize="12" FontWeight="SemiBold" Foreground="#FF6C757D" TextAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="% TOTAL" FontSize="12" FontWeight="SemiBold" Foreground="#FF6C757D" TextAlignment="Center"/>
                                    </Grid>
                                </Border>
                                <!-- Rows will be added dynamically -->
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- BOTTOM TABLES -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- LOW STOCK PRODUCTS -->
                        <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="25" Margin="0,0,10,0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.08"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="⚠️ Products to Order" FontSize="18" FontWeight="SemiBold" Foreground="#FF2D3E50" Margin="0,0,0,20"/>

                                <StackPanel x:Name="lowStockPanel">
                                    <!-- Header -->
                                    <Border Background="#FFF8F9FA" CornerRadius="8,8,0,0" Padding="0,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="SKU" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D"/>
                                            <TextBlock Grid.Column="1" Text="PRODUCT" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D"/>
                                            <TextBlock Grid.Column="2" Text="CURRENT" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" TextAlignment="Center"/>
                                            <TextBlock Grid.Column="3" Text="MIN" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" TextAlignment="Center"/>
                                            <TextBlock Grid.Column="4" Text="ORDER" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" TextAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                    <!-- Rows will be added dynamically -->
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- MOST VALUABLE PRODUCTS -->
                        <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="25" Margin="10,0,0,0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.08"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="💎 Most Valuable in Stock" FontSize="18" FontWeight="SemiBold" Foreground="#FF2D3E50" Margin="0,0,0,20"/>

                                <StackPanel x:Name="valuableProductsPanel">
                                    <!-- Header -->
                                    <Border Background="#FFF8F9FA" CornerRadius="8,8,0,0" Padding="0,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="PRODUCT" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D"/>
                                            <TextBlock Grid.Column="1" Text="CATEGORY" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" TextAlignment="Center"/>
                                            <TextBlock Grid.Column="2" Text="QTY" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" TextAlignment="Center"/>
                                            <TextBlock Grid.Column="3" Text="UNIT PRICE" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" TextAlignment="Center"/>
                                            <TextBlock Grid.Column="4" Text="TOTAL VALUE" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" TextAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                    <!-- Rows will be added dynamically -->
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>

