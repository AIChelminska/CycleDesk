<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="CycleDesk.InvoicesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:CycleDesk.Controls"
        Title="CycleDesk - Invoices" 
        Height="900" 
        Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- View Details Button Style -->
        <Style x:Key="ViewDetailsButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#FF17A2B8"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF138496"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF0F6674"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Download Button Style -->
        <Style x:Key="DownloadButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#FF28A745"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF218838"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF1E7E34"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Delete Button Style -->
        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#FFDC3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFC82333"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFB21F2D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- MENU BUTTON STYLE -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFADB5BD"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Warstwa podstawowa -->
                            <Border Background="Transparent" CornerRadius="0"/>

                            <!-- HOVER GRADIENT -->
                            <Grid x:Name="hoverLayer" Opacity="0">
                                <!-- Biały pasek z lewej -->
                                <Border Width="3"
                                   HorizontalAlignment="Left"
                                   Background="White"/>

                                <!-- Gradient -->
                                <Border Margin="3,0,0,0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="#33FFFFFF" Offset="0"/>
                                            <GradientStop Color="#03FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>

                            <!-- ACTIVE STATE -->
                            <Grid x:Name="activeLayer" Opacity="0">
                                <!-- Biały pasek z lewej -->
                                <Border Width="3"
                                   HorizontalAlignment="Left"
                                   Background="White"/>

                                <!-- Gradient -->
                                <Border Margin="3,0,0,0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="#33FFFFFF" Offset="0"/>
                                            <GradientStop Color="#03FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>

                            <!-- Zawartość -->
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="Center"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- AKTYWNY PRZYCISK -->
                            <Trigger Property="Tag" Value="Active">
                                <Setter TargetName="activeLayer" Property="Opacity" Value="1"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>

                            <!-- HOVER (tylko dla nieaktywnych) -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="Tag" Value="{x:Null}"/>
                                </MultiTrigger.Conditions>
                                <MultiTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="hoverLayer"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="0" To="1"
                                                         Duration="0:0:0.25">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.EnterActions>
                                <MultiTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="hoverLayer"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="1" To="0"
                                                         Duration="0:0:0.25">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.ExitActions>
                                <Setter Property="Foreground" Value="White"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- SUBMENU BUTTON STYLE -->
        <Style x:Key="SubmenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFADB5BD"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="45,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="border" Property="Background" Value="#1AFFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- COMBOBOX STYLE -->
        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFDEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                   BorderBrush="{TemplateBinding BorderBrush}"
                                   BorderThickness="{TemplateBinding BorderThickness}"
                                   CornerRadius="8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <ContentPresenter Grid.Column="0"
                                                     Content="{TemplateBinding SelectionBoxItem}"
                                                     ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                     Margin="{TemplateBinding Padding}"
                                                     VerticalAlignment="Center"
                                                     HorizontalAlignment="Left"/>

                                    <TextBlock Grid.Column="1"
                                              Text="▼"
                                              FontSize="10"
                                              Foreground="#FF6C757D"
                                              Margin="0,0,12,0"
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            <Popup IsOpen="{TemplateBinding IsDropDownOpen}"
                                  Placement="Bottom"
                                  AllowsTransparency="True">
                                <Border Background="White"
                                       BorderBrush="#FFDEE2E6"
                                       BorderThickness="1"
                                       CornerRadius="8"
                                       Margin="0,5,0,0">
                                    <ScrollViewer MaxHeight="200">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <controls:SideMenuControl x:Name="sideMenu" DockPanel.Dock="Left" />

        <!-- MAIN CONTENT AREA -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0" 
                    Background="White" 
                    Padding="40,30"
                    BorderThickness="0,0,0,1"
                    BorderBrush="#FFDEE2E6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Title -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Invoices"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#FF2D3E50"/>
                        <TextBlock Text="View and manage all issued invoices"
                                   FontSize="14"
                                   Foreground="#FF6C757D"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Generate Invoice Button -->
                    <Button Grid.Column="1"
                            Content="+ Generate Invoice"
                            Height="45"
                            Padding="25,0"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Background="#FF28A745"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            VerticalAlignment="Center"
                            Click="GenerateInvoice_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="10">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF218838"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#FF1E7E34"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- CONTENT -->
            <Border Grid.Row="1" Padding="40,30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- FILTERS -->
                    <Border Grid.Row="0" 
                            Background="White"
                            CornerRadius="12"
                            Padding="25">
                        <Border.Effect>
                            <DropShadowEffect Color="#FFE0E0E0" 
                                            BlurRadius="15" 
                                            ShadowDepth="0" 
                                            Opacity="0.3"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Search Box -->
                            <Border Grid.Column="0"
                                    Background="White"
                                    BorderBrush="#FFDEE2E6"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                <Grid>
                                    <TextBlock Text="🔍"
                                              FontSize="16"
                                              Foreground="#FF6C757D"
                                              VerticalAlignment="Center"
                                              Margin="15,0,0,0"/>

                                    <TextBox Height="40"
                                            Padding="45,0,15,0"
                                            FontSize="14"
                                            VerticalContentAlignment="Center"
                                            BorderThickness="0"
                                            Background="Transparent">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Foreground" Value="#FF495057"/>
                                                <Style.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="8"/>
                                                    </Style>
                                                </Style.Resources>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>

                                    <TextBlock Text="Search by invoice number, customer name..."
                                              FontSize="13"
                                              Foreground="#FFADB5BD"
                                              VerticalAlignment="Center"
                                              Margin="45,0,15,0"
                                              IsHitTestVisible="False"/>
                                </Grid>
                            </Border>

                            <!-- Status Filter -->
                            <ComboBox Grid.Column="2"
                                     Height="40"
                                     FontSize="14"
                                     Style="{StaticResource FilterComboBoxStyle}">
                                <ComboBoxItem Content="All Statuses" IsSelected="True"/>
                                <ComboBoxItem Content="Paid"/>
                                <ComboBoxItem Content="Unpaid"/>
                                <ComboBoxItem Content="Overdue"/>
                                <ComboBoxItem Content="Cancelled"/>
                            </ComboBox>

                            <!-- Date Filter -->
                            <ComboBox Grid.Column="4"
                                     Height="40"
                                     FontSize="14"
                                     Style="{StaticResource FilterComboBoxStyle}">
                                <ComboBoxItem Content="All Time" IsSelected="True"/>
                                <ComboBoxItem Content="Last 7 Days"/>
                                <ComboBoxItem Content="Last 30 Days"/>
                                <ComboBoxItem Content="Last 3 Months"/>
                                <ComboBoxItem Content="This Year"/>
                            </ComboBox>

                            <!-- Filter Button -->
                            <Button Grid.Column="6"
                                    Content="Apply Filters"
                                    Height="40"
                                    Padding="20,0"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Background="#FF2D3E50"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                           CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF1E2A36"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#FF141D28"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- INVOICES TABLE -->
                    <Border Grid.Row="2"
                            Background="White"
                            CornerRadius="12"
                            Padding="0">
                        <Border.Effect>
                            <DropShadowEffect Color="#FFE0E0E0" 
                                            BlurRadius="15" 
                                            ShadowDepth="0" 
                                            Opacity="0.3"/>
                        </Border.Effect>

                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Disabled">
                            <StackPanel>
                                <!-- Table Header -->
                                <Border Background="#FFF8F9FA" 
                                       BorderThickness="0,0,0,1"
                                       BorderBrush="#FFDEE2E6"
                                       Padding="25,20">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="130"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="200"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="Invoice #" 
                                                  FontSize="13" FontWeight="Bold" 
                                                  Foreground="#FF495057"/>
                                        <TextBlock Grid.Column="1" Text="Customer" 
                                                  FontSize="13" FontWeight="Bold" 
                                                  Foreground="#FF495057"/>
                                        <TextBlock Grid.Column="2" Text="Date" 
                                                  FontSize="13" FontWeight="Bold" 
                                                  Foreground="#FF495057"/>
                                        <TextBlock Grid.Column="3" Text="Amount" 
                                                  FontSize="13" FontWeight="Bold" 
                                                  Foreground="#FF495057" 
                                                  TextAlignment="Right"/>
                                        <TextBlock Grid.Column="4" Text="Status" 
                                                  FontSize="13" FontWeight="Bold" 
                                                  Foreground="#FF495057"/>
                                        <TextBlock Grid.Column="5" Text="Actions" 
                                                  FontSize="13" FontWeight="Bold" 
                                                  Foreground="#FF495057"
                                                  TextAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- Table Rows -->
                                <StackPanel x:Name="invoicesContainer">
                                    <!-- Invoice Row 1 -->
                                    <Border Background="White" 
                                           BorderThickness="0,0,0,1"
                                           BorderBrush="#FFF8F9FA"
                                           Padding="25,20"
                                           MouseEnter="InvoiceRow_MouseEnter"
                                           MouseLeave="InvoiceRow_MouseLeave">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="130"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="200"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Invoice Number -->
                                            <TextBlock Grid.Column="0" 
                                                      Text="INV-2025-001"
                                                      FontSize="14"
                                                      FontWeight="SemiBold"
                                                      Foreground="#FF2D3E50"
                                                      VerticalAlignment="Center"/>

                                            <!-- Customer -->
                                            <TextBlock Grid.Column="1" 
                                                      Text="Jan Kowalski"
                                                      FontSize="14"
                                                      Foreground="#FF495057"
                                                      VerticalAlignment="Center"/>

                                            <!-- Date -->
                                            <TextBlock Grid.Column="2" 
                                                      Text="2025-01-15"
                                                      FontSize="14"
                                                      Foreground="#FF6C757D"
                                                      VerticalAlignment="Center"/>

                                            <!-- Amount -->
                                            <TextBlock Grid.Column="3" 
                                                      Text="2,450.00 PLN"
                                                      FontSize="14"
                                                      FontWeight="SemiBold"
                                                      Foreground="#FF495057"
                                                      VerticalAlignment="Center"
                                                      TextAlignment="Right"/>

                                            <!-- Status -->
                                            <Border Grid.Column="4"
                                                   Background="#FFD4EDDA"
                                                   CornerRadius="6"
                                                   Padding="10,5"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center">
                                                <TextBlock Text="Paid"
                                                          FontSize="12"
                                                          FontWeight="SemiBold"
                                                          Foreground="#FF155724"/>
                                            </Border>

                                            <!-- Actions -->
                                            <StackPanel Grid.Column="5" 
                                                       Orientation="Horizontal" 
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center">
                                                <Button Content="View"
                                                       Style="{StaticResource ViewDetailsButtonStyle}"
                                                       Margin="0,0,8,0"
                                                       Click="ViewInvoice_Click"/>
                                                <Button Content="Download"
                                                       Style="{StaticResource DownloadButtonStyle}"
                                                       Click="DownloadInvoice_Click"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!-- Invoice Row 2 -->
                                    <Border Background="White" 
                                           BorderThickness="0,0,0,1"
                                           BorderBrush="#FFF8F9FA"
                                           Padding="25,20"
                                           MouseEnter="InvoiceRow_MouseEnter"
                                           MouseLeave="InvoiceRow_MouseLeave">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="130"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="200"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" 
                                                      Text="INV-2025-002"
                                                      FontSize="14"
                                                      FontWeight="SemiBold"
                                                      Foreground="#FF2D3E50"
                                                      VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="1" 
                                                      Text="Anna Nowak"
                                                      FontSize="14"
                                                      Foreground="#FF495057"
                                                      VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="2" 
                                                      Text="2025-01-18"
                                                      FontSize="14"
                                                      Foreground="#FF6C757D"
                                                      VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="3" 
                                                      Text="1,890.00 PLN"
                                                      FontSize="14"
                                                      FontWeight="SemiBold"
                                                      Foreground="#FF495057"
                                                      VerticalAlignment="Center"
                                                      TextAlignment="Right"/>

                                            <Border Grid.Column="4"
                                                   Background="#FFFFEAA7"
                                                   CornerRadius="6"
                                                   Padding="10,5"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center">
                                                <TextBlock Text="Unpaid"
                                                          FontSize="12"
                                                          FontWeight="SemiBold"
                                                          Foreground="#FF856404"/>
                                            </Border>

                                            <StackPanel Grid.Column="5" 
                                                       Orientation="Horizontal" 
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center">
                                                <Button Content="View"
                                                       Style="{StaticResource ViewDetailsButtonStyle}"
                                                       Margin="0,0,8,0"
                                                       Click="ViewInvoice_Click"/>
                                                <Button Content="Download"
                                                       Style="{StaticResource DownloadButtonStyle}"
                                                       Click="DownloadInvoice_Click"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!-- Invoice Row 3 -->
                                    <Border Background="White" 
                                           BorderThickness="0,0,0,1"
                                           BorderBrush="#FFF8F9FA"
                                           Padding="25,20"
                                           MouseEnter="InvoiceRow_MouseEnter"
                                           MouseLeave="InvoiceRow_MouseLeave">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="130"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="200"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" 
                                                      Text="INV-2025-003"
                                                      FontSize="14"
                                                      FontWeight="SemiBold"
                                                      Foreground="#FF2D3E50"
                                                      VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="1" 
                                                      Text="Piotr Wiśniewski"
                                                      FontSize="14"
                                                      Foreground="#FF495057"
                                                      VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="2" 
                                                      Text="2025-01-20"
                                                      FontSize="14"
                                                      Foreground="#FF6C757D"
                                                      VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="3" 
                                                      Text="3,200.00 PLN"
                                                      FontSize="14"
                                                      FontWeight="SemiBold"
                                                      Foreground="#FF495057"
                                                      VerticalAlignment="Center"
                                                      TextAlignment="Right"/>

                                            <Border Grid.Column="4"
                                                   Background="#FFF8D7DA"
                                                   CornerRadius="6"
                                                   Padding="10,5"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center">
                                                <TextBlock Text="Overdue"
                                                          FontSize="12"
                                                          FontWeight="SemiBold"
                                                          Foreground="#FF721C24"/>
                                            </Border>

                                            <StackPanel Grid.Column="5" 
                                                       Orientation="Horizontal" 
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center">
                                                <Button Content="View"
                                                       Style="{StaticResource ViewDetailsButtonStyle}"
                                                       Margin="0,0,8,0"
                                                       Click="ViewInvoice_Click"/>
                                                <Button Content="Download"
                                                       Style="{StaticResource DownloadButtonStyle}"
                                                       Click="DownloadInvoice_Click"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!-- Invoice Row 4 -->
                                    <Border Background="White" 
                                           BorderThickness="0,0,0,1"
                                           BorderBrush="#FFF8F9FA"
                                           Padding="25,20"
                                           MouseEnter="InvoiceRow_MouseEnter"
                                           MouseLeave="InvoiceRow_MouseLeave">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="130"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="200"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" 
