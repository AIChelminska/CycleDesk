<UserControl x:Class="CycleDesk.Views.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300">

    <StackPanel>
        <!-- Title -->
        <TextBlock Text="Welcome Back"
                  FontSize="28"
                  FontWeight="SemiBold"
                  Foreground="White"
                  HorizontalAlignment="Center"
                  Margin="0,40,0,25"/>
        <!-- Username -->
        <Border Background="#FF1E1E1E"
               BorderBrush="#FF3A3A3A"
               BorderThickness="1"
               CornerRadius="20"
               Margin="0,0,0,15">
            <Grid>
                <TextBox x:Name="txtUsername"
                        Height="45"
                        Padding="15,10"
                        FontSize="16"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        VerticalContentAlignment="Center"/>
                <TextBlock Text="Username" 
                          Foreground="#FF888888"
                          FontSize="14"
                          Margin="15,0,0,0"
                          VerticalAlignment="Center"
                          IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=txtUsername, Path=Text}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>

        <!-- Password -->
        <Border Background="#FF1E1E1E"
               BorderBrush="#FF3A3A3A"
               BorderThickness="1"
               CornerRadius="20"
               Margin="0,0,0,10">
            <Grid>
                <PasswordBox x:Name="txtPassword"
                            Height="45"
                            Padding="15,10"
                            FontSize="16"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            VerticalContentAlignment="Center"/>
                <TextBlock Text="Password" 
                          Foreground="#FF888888"
                          FontSize="14"
                          Margin="15,0,0,0"
                          VerticalAlignment="Center"
                          IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=txtPassword, Path=Password}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>

        <!-- Forgot Password Link -->
        <TextBlock HorizontalAlignment="Right"
                  Margin="0,5,0,20">
            <Hyperlink Foreground="#FF888888"
                      FontSize="12"
                      TextDecorations="None"
                      Click="ForgotPassword_Click">
                <Hyperlink.Style>
                    <Style TargetType="Hyperlink">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#FFAAAAAA"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Hyperlink.Style>
                Forgot password?
            </Hyperlink>
        </TextBlock>

        <!-- Login Button -->
        <Button Content="Log In"
               Width="150"
               Height="40"
               FontSize="16"
               FontWeight="SemiBold"
               Background="#FF2E5BFF"
               Foreground="White"
               BorderThickness="0"
               Cursor="Hand"
               Click="LoginButton_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                       CornerRadius="20"
                                       Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF4169FF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!-- Sign Up Link -->
        <TextBlock HorizontalAlignment="Center"
                  Margin="0,25,0,0">
            <Run Text="Don't have an account? "
                Foreground="#FF888888"
                FontSize="13"/>
            <Hyperlink Foreground="#FF2E5BFF"
                      FontSize="13"
                      FontWeight="SemiBold"
                      TextDecorations="None"
                      Click="SignUp_Click">
                <Hyperlink.Style>
                    <Style TargetType="Hyperlink">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#FF4169FF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Hyperlink.Style>
                Sign up
            </Hyperlink>
        </TextBlock>
    </StackPanel>
</UserControl>
