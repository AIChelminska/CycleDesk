<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="CycleDesk.ProductsToOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CycleDesk - Products to Order" 
        Height="900" 
        Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5"
        WindowState="Maximized">

    <Window.Resources>
        <!-- MENU BUTTON STYLE -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFADB5BD"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border Background="Transparent" CornerRadius="0"/>
                            <Grid x:Name="hoverLayer" Opacity="0">
                                <Border Width="3" HorizontalAlignment="Left" Background="White"/>
                                <Border Margin="3,0,0,0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="#33FFFFFF" Offset="0"/>
                                            <GradientStop Color="#03FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>
                            <Grid x:Name="activeLayer" Opacity="0">
                                <Border Width="3" HorizontalAlignment="Left" Background="White"/>
                                <Border Margin="3,0,0,0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="#33FFFFFF" Offset="0"/>
                                            <GradientStop Color="#03FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Tag" Value="Active">
                                <Setter TargetName="activeLayer" Property="Opacity" Value="1"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="Tag" Value="{x:Null}"/>
                                </MultiTrigger.Conditions>
                                <MultiTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="hoverLayer"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="0" To="1" Duration="0:0:0.25">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.EnterActions>
                                <MultiTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="hoverLayer"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="1" To="0" Duration="0:0:0.25">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.ExitActions>
                                <Setter Property="Foreground" Value="White"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- SUBMENU BUTTON STYLE -->
        <Style x:Key="SubmenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFADB5BD"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="45,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#1AFFFFFF"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFDEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#FF2D3E50"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Focusable="False"
                                        IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                               BorderBrush="{TemplateBinding BorderBrush}"
                                               BorderThickness="{TemplateBinding BorderThickness}"
                                               CornerRadius="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"
                                                                Margin="15,0,0,0"
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Left"/>
                                                <TextBlock Grid.Column="1"
                                                         Text="▼"
                                                         FontSize="10"
                                                         Foreground="#FF6C757D"
                                                         Margin="0,0,15,0"
                                                         VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            Margin="15,0,30,0"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            IsHitTestVisible="False"/>
                            <Popup x:Name="PART_Popup"
                                  Placement="Bottom"
                                  IsOpen="{TemplateBinding IsDropDownOpen}"
                                  AllowsTransparency="True"
                                  Focusable="False"
                                  PopupAnimation="Slide">
                                <Border Background="White"
                                       BorderBrush="#FFDEE2E6"
                                       BorderThickness="1"
                                       CornerRadius="8"
                                       Margin="0,5,0,0"
                                       MinWidth="{TemplateBinding ActualWidth}">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.15"/>
                                    </Border.Effect>
                                    <ScrollViewer MaxHeight="200" Margin="0">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="#FFF8F9FA"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FFE9ECEF"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEWE MENU - IDENTYCZNE JAK W DASHBOARD -->
        <Border Grid.Column="0" Background="#181C3D">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo -->
                <StackPanel Grid.Row="0" Margin="0,0,0,0">
                    <Image Source="/Images/logo2.png"
                Width="100" 
                Height="100" 

                RenderOptions.BitmapScalingMode="HighQuality"/>
                </StackPanel>

                <!-- Menu -->
                <StackPanel Grid.Row="1">
                    <TextBlock Text="MAIN MENU"
                    FontSize="11"
                    FontWeight="SemiBold"
                    Foreground="#FF7F8C9A"
                    Margin="20,0,0,15"/>

                    <!-- Dashboard -->
                    <Button x:Name="btnDashboard"
                Style="{StaticResource MenuButtonStyle}"
                Click="Dashboard_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊" FontSize="18" Margin="0,0,15,0"/>
                            <TextBlock Text="Dashboard" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Inventory -->
                    <Button x:Name="btnInventory"
                Style="{StaticResource MenuButtonStyle}"
                Click="Inventory_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📦" FontSize="18" Margin="0,0,15,0"/>
                            <TextBlock Text="Inventory" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Inventory Submenu -->
                    <StackPanel x:Name="submenuInventory" Visibility="Collapsed">
                        <Button Style="{StaticResource MenuButtonStyle}"
                    Padding="45,12"
                    Click="Products_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📦" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Products" FontSize="13" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
                    Padding="45,12"
                    Click="Categories_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📋" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Categories" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
                    Padding="45,12"
                    Click="InventoryStatus_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Inventory Status" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
                    Padding="45,12"
                    Click="GoodsReceipt_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📥" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Goods Receipt" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
                    Padding="45,12"
                    Click="Suppliers_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🚚" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Suppliers" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Sales -->
                    <Button x:Name="btnSales"
    Style="{StaticResource MenuButtonStyle}"
    Click="Sales_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🛒" FontSize="18" Margin="0,0,15,0"/>
                            <TextBlock Text="Sales" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>


                    <!-- Sales Submenu -->
                    <StackPanel x:Name="submenuSales" Visibility="Collapsed">
                        <Button Style="{StaticResource MenuButtonStyle}"
        Padding="45,12"
        Click="NewSale_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🖨️" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="New Sale" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
        Padding="45,12"
        Click="SalesHistory_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔍" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="History" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
        Padding="45,12"
        Click="Invoices_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📄" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Invoices" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Reports -->
                    <Button x:Name="btnReports"
Style="{StaticResource MenuButtonStyle}"
Click="Reports_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📈" FontSize="18" Margin="0,0,15,0"/>
                            <TextBlock Text="Reports" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Reports Submenu -->
                    <StackPanel x:Name="submenuReports" Visibility="Collapsed">
                        <Button Style="{StaticResource MenuButtonStyle}"
            Padding="45,12"
            Click="SalesReports_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💵" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Sales Reports" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
            Padding="45,12"
            Click="InventoryReports_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Inventory Reports" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
            Padding="45,12"
            Click="ProductsToOrder_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚠️" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Products to Order" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Administration -->
                    <Button x:Name="btnAdministration"
Style="{StaticResource MenuButtonStyle}"
Click="Administration_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙️" FontSize="18" Margin="0,0,15,0"/>
                            <TextBlock Text="Administration" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Administration Submenu -->
                    <StackPanel x:Name="submenuAdministration" Visibility="Collapsed">
                        <Button Style="{StaticResource MenuButtonStyle}"
            Padding="45,12"
            Click="Users_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👥" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Users" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
            Padding="45,12"
            Click="Settings_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔧" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Settings" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- User Info -->
                <StackPanel Grid.Row="2" Margin="20,0,20,30">
                    <Border Background="#FF1E2A36"
                CornerRadius="10"
                Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0">
                                <TextBlock x:Name="lblUserFullName"
                               Text="Admin User"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="White"
                               Margin="0,0,0,5"/>
                                <TextBlock x:Name="lblUserRole"
                               Text="Supervisor"
                               FontSize="12"
                               Foreground="#FF7F8C9A"/>
                            </StackPanel>

                            <Button Grid.Row="1"
                        Content="Logout"
                        Margin="0,15,0,0"
                        Height="35"
                        Background="#FFDC3545"
                        Foreground="White"
                        BorderThickness="0"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="Logout_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFC82333"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== MAIN CONTENT ===== -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar -->
            <Border Grid.Row="0" Background="White" Padding="30,20" BorderBrush="#FFDEE2E6" BorderThickness="0,0,0,1">
                <Grid>
                    <TextBlock Text="🛒 Products to Order" FontSize="28" FontWeight="Bold" Foreground="#FF2D3E50" VerticalAlignment="Center"/>
                    <TextBlock Text="Tuesday, November 18, 2025" FontSize="13" Foreground="#FF6C757D" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <!-- Content Area -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="30" MaxWidth="1800">

                    <!-- FILTER PANEL -->
                    <Border Background="White" CornerRadius="12" Padding="25" Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.08"/>
                        </Border.Effect>
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel Margin="0,0,20,0">
                                    <TextBlock Text="Category" FontSize="12" Foreground="#FF6C757D" Margin="0,0,0,8"/>
                                    <ComboBox x:Name="cmbCategory" Width="200" Style="{StaticResource FilterComboBoxStyle}" 
                                              SelectionChanged="Filter_SelectionChanged"/>
                                </StackPanel>
                                <StackPanel Margin="0,0,20,0">
                                    <TextBlock Text="Priority" FontSize="12" Foreground="#FF6C757D" Margin="0,0,0,8"/>
                                    <ComboBox x:Name="cmbPriority" Width="200" Style="{StaticResource FilterComboBoxStyle}" 
                                              SelectionChanged="Filter_SelectionChanged"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- KPI CARDS -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Card 1: Total Products -->
                        <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="25" Margin="0,0,10,0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.08"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="📋" FontSize="32" HorizontalAlignment="Left"/>
                                <TextBlock x:Name="txtTotalProducts" Text="15" FontSize="28" FontWeight="Bold" Foreground="#FF2D3E50" Margin="0,10,0,0"/>
                                <TextBlock Text="Products to Order" FontSize="13" Foreground="#FF6C757D" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Card 2: Critical Items -->
                        <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="25" Margin="5,0,5,0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.08"/>
                            </Border.Effect>
                            <StackPanel>
                                <Grid>
                                    <TextBlock Text="🔴" FontSize="32" HorizontalAlignment="Left"/>
                                    <Border Background="#FFF8D7DA" CornerRadius="6" Padding="8,4" HorizontalAlignment="Right" VerticalAlignment="Top">
                                        <TextBlock Text="URGENT" FontSize="11" Foreground="#FFDC3545" FontWeight="SemiBold"/>
                                    </Border>
                                </Grid>
                                <TextBlock x:Name="txtCriticalItems" Text="2" FontSize="28" FontWeight="Bold" Foreground="#FFDC3545" Margin="0,10,0,0"/>
                                <TextBlock Text="Critical Items" FontSize="13" Foreground="#FF6C757D" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Card 3: Total Value -->
                        <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="25" Margin="5,0,5,0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.08"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="💰" FontSize="32" HorizontalAlignment="Left"/>
                                <TextBlock x:Name="txtTotalValue" Text="PLN 18,456.50" FontSize="24" FontWeight="Bold" Foreground="#FF2D3E50" Margin="0,10,0,0"/>
                                <TextBlock Text="Total Order Value" FontSize="13" Foreground="#FF6C757D" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Card 4: Total Units -->
                        <Border Grid.Column="3" Background="White" CornerRadius="12" Padding="25" Margin="10,0,0,0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.08"/>
                            </Border.Effect>
                            <StackPanel>
                                <TextBlock Text="📦" FontSize="32" HorizontalAlignment="Left"/>
                                <TextBlock x:Name="txtTotalUnits" Text="234" FontSize="28" FontWeight="Bold" Foreground="#FF2D3E50" Margin="0,10,0,0"/>
                                <TextBlock Text="Total Units" FontSize="13" Foreground="#FF6C757D" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- PRODUCTS TABLE -->
                    <Border Background="White" CornerRadius="12" Padding="25" Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.08"/>
                        </Border.Effect>
                        <StackPanel>
                            <!-- Table Header with Actions -->
                            <Grid Margin="0,0,0,20">
                                <TextBlock Text="📋 Products List" FontSize="18" FontWeight="SemiBold" Foreground="#FF2D3E50" VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="Select All" Padding="12,8" Margin="0,0,8,0"
                                            Background="White" Foreground="#FF2D3E50" BorderBrush="#FFDEE2E6" BorderThickness="1"
                                            FontSize="12" FontWeight="SemiBold" Cursor="Hand"
                                            Click="SelectAll_Click">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FFF8F9FA"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="Select Critical" Padding="12,8" Margin="0,0,8,0"
                                            Background="#FFDC3545" Foreground="White" BorderThickness="0"
                                            FontSize="12" FontWeight="SemiBold" Cursor="Hand"
                                            Click="SelectCritical_Click">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FFc82333"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="Clear" Padding="12,8"
                                            Background="White" Foreground="#FF2D3E50" BorderBrush="#FFDEE2E6" BorderThickness="1"
                                            FontSize="12" FontWeight="SemiBold" Cursor="Hand"
                                            Click="SelectNone_Click">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                                    CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FFF8F9FA"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Grid>

                            <StackPanel x:Name="productsPanel">
                                <!-- Header -->
                                <Border Background="#FFF8F9FA" CornerRadius="8,8,0,0" Padding="0,12">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="0.8*"/>
                                            <ColumnDefinition Width="0.8*"/>
                                            <ColumnDefinition Width="0.8*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="1.2*"/>
                                            <ColumnDefinition Width="1.2*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="☑" FontSize="14" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="PRIORITY" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" TextAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="PRODUCT" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D"/>
                                        <TextBlock Grid.Column="3" Text="CATEGORY" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" TextAlignment="Center"/>
                                        <TextBlock Grid.Column="4" Text="CURRENT" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" TextAlignment="Center"/>
                                        <TextBlock Grid.Column="5" Text="MIN" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" TextAlignment="Center"/>
                                        <TextBlock Grid.Column="6" Text="ORDER" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" TextAlignment="Center"/>
                                        <TextBlock Grid.Column="7" Text="UNIT PRICE" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" TextAlignment="Center"/>
                                        <TextBlock Grid.Column="8" Text="TOTAL COST" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" TextAlignment="Center"/>
                                        <TextBlock Grid.Column="9" Text="STATUS" FontSize="11" FontWeight="SemiBold" Foreground="#FF6C757D" TextAlignment="Center"/>
                                    </Grid>
                                </Border>
                                <!-- Rows will be added dynamically -->
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- SELECTION SUMMARY & ACTIONS -->
                    <Border Background="White" CornerRadius="12" Padding="30" Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.08"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Summary -->
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <Border Background="#FFF8F9FA" CornerRadius="8" Padding="20,12" Margin="0,0,15,0">
                                    <StackPanel>
                                        <TextBlock Text="Selected Products" FontSize="11" Foreground="#FF6C757D" Margin="0,0,0,4"/>
                                        <TextBlock x:Name="txtSelectedCount" Text="0" FontSize="20" FontWeight="Bold" Foreground="#FF2D3E50"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#FFF8F9FA" CornerRadius="8" Padding="20,12" Margin="0,0,15,0">
                                    <StackPanel>
                                        <TextBlock Text="Total Units" FontSize="11" Foreground="#FF6C757D" Margin="0,0,0,4"/>
                                        <TextBlock x:Name="txtSelectedUnits" Text="0" FontSize="20" FontWeight="Bold" Foreground="#FF2D3E50"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#FFE8F5E9" CornerRadius="8" Padding="20,12">
                                    <StackPanel>
                                        <TextBlock Text="Total Value" FontSize="11" Foreground="#FF28A745" Margin="0,0,0,4"/>
                                        <TextBlock x:Name="txtSelectedValue" Text="PLN 0.00" FontSize="20" FontWeight="Bold" Foreground="#FF28A745"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Action Button -->
                            <Button Grid.Column="1" Content="📝 Generate Purchase Order" Height="56" Padding="35,0"
                                    Background="#FF28A745" Foreground="White" BorderThickness="0"
                                    FontSize="15" FontWeight="SemiBold" Cursor="Hand"
                                    Click="GeneratePurchaseOrder_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF218838"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
