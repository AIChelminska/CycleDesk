                                </StackPanel>

                                <!-- Row 3: Category | Sale Price -->
                                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,20">
                                    <TextBlock Text="Category:"
                                              FontSize="13"
                                              Foreground="#FF6C757D"
                                              Margin="0,0,0,8"/>
                                    <ComboBox Height="40"
                                             FontSize="14"
                                             Padding="12,0"
                                             BorderBrush="#FFDEE2E6"
                                             Style="{StaticResource FilterComboBoxStyle}">
                                        <ComboBoxItem Content="Choose" IsSelected="True"/>
                                        <ComboBoxItem Content="Bikes"/>
                                        <ComboBoxItem Content="Parts"/>
                                        <ComboBoxItem Content="Accessories"/>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,20">
                                    <TextBlock Text="Sale Price:"
                                              FontSize="13"
                                              Foreground="#FF6C757D"
                                              Margin="0,0,0,8"/>
                                    <Grid>
                                        <TextBox Height="40"
                                                Padding="12,0,50,0"
                                                FontSize="14"
                                                BorderBrush="#FFDEE2E6"
                                                BorderThickness="1">
                                            <TextBox.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="8"/>
                                                </Style>
                                            </TextBox.Resources>
                                        </TextBox>
                                        <TextBlock Text="PLN"
                                                  FontSize="13"
                                                  Foreground="#FF6C757D"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Right"
                                                  Margin="0,0,15,0"
                                                  IsHitTestVisible="False"/>
                                    </Grid>
                                </StackPanel>

                                <!-- Row 4: Supplier | Purchase Price -->
                                <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,0,0">
                                    <TextBlock Text="Supplier:"
                                              FontSize="13"
                                              Foreground="#FF6C757D"
                                              Margin="0,0,0,8"/>
                                    <ComboBox Height="40"
                                             FontSize="14"
                                             Padding="12,0"
                                             BorderBrush="#FFDEE2E6"
                                             Style="{StaticResource FilterComboBoxStyle}">
                                        <ComboBoxItem Content="Choose" IsSelected="True"/>
                                        <ComboBoxItem Content="Trek Poland"/>
                                        <ComboBoxItem Content="Shimano Europe"/>
                                        <ComboBoxItem Content="Schwalbe Tires"/>
                                        <ComboBoxItem Content="Bike Parts PL"/>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Grid.Row="3" Grid.Column="2" Margin="0,0,0,0">
                                    <TextBlock Text="Purchase Price:"
                                              FontSize="13"
                                              Foreground="#FF6C757D"
                                              Margin="0,0,0,8"/>
                                    <Grid>
                                        <TextBox Height="40"
                                                Padding="12,0,50,0"
                                                FontSize="14"
                                                BorderBrush="#FFDEE2E6"
                                                BorderThickness="1">
                                            <TextBox.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="8"/>
                                                </Style>
                                            </TextBox.Resources>
                                        </TextBox>
                                        <TextBlock Text="PLN"
                                                  FontSize="13"
                                                  Foreground="#FF6C757D"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Right"
                                                  Margin="0,0,15,0"
                                                  IsHitTestVisible="False"/>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer Buttons -->
                    <Grid Grid.Row="2" Margin="0,30,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Cancel Button -->
                        <Button Grid.Column="0"
                               Content="Cancel"
                               Height="50"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Background="#FFF8F9FA"
                               Foreground="#FF6C757D"
                               BorderThickness="1"
                               BorderBrush="#FFDEE2E6"
                               Cursor="Hand"
                               Click="CloseModal_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="{TemplateBinding BorderThickness}"
                                                       CornerRadius="10">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFE9ECEF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Save Button -->
                        <Button Grid.Column="2"
                               Content="Save"
                               Height="50"
                               FontSize="15"
                               FontWeight="SemiBold"
                               Background="#FF2D3E50"
                               Foreground="White"
                               BorderThickness="0"
                               Cursor="Hand"
                               Click="SaveProduct_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                       CornerRadius="10">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF1E2A36"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#FF141D28"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>