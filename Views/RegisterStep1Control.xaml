 <UserControl x:Class="CycleDesk.Views.RegisterStep1Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="350"><StackPanel>
    <TextBlock x:Name="lblTitle"
              Text="Activate Your Account"
              FontSize="24"
              FontWeight="SemiBold"
              Foreground="White"
              HorizontalAlignment="Center"
              Margin="0,0,0,10"/>

    <TextBlock x:Name="lblSubtitle"
              Text="Enter the 11-digit access code"
              FontSize="13"
              Foreground="#FF888888"
              HorizontalAlignment="Center"
              Margin="0,0,0,30"/>

    <!-- Access Code Input -->
    <Border Background="#FF1E1E1E"
               BorderBrush="#FF3A3A3A"
               BorderThickness="1"
               CornerRadius="20"
               Margin="0,0,0,25">
        <Grid>
            <TextBox x:Name="txtAccessCode"
                        Height="50"
                        Padding="15,10"
                        FontSize="18"
                        FontWeight="SemiBold"
                        MaxLength="11"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        VerticalContentAlignment="Center"
                        TextAlignment="Center"
                        PreviewTextInput="NumbersOnly_PreviewTextInput"/>
            <TextBlock Text="00000000000" 
                          Foreground="#FF444444"
                          FontSize="18"
                          FontWeight="SemiBold"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          IsHitTestVisible="False">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=txtAccessCode, Path=Text}" Value="">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>
    </Border>

    <!-- Verify Button -->
    <Button Content="Verify Code"
               Width="200"
               Height="45"
               FontSize="16"
               FontWeight="SemiBold"
               Background="#FF2E5BFF"
               Foreground="White"
               BorderThickness="0"
               Cursor="Hand"
               Click="VerifyCode_Click">
        <Button.Style>
            <Style TargetType="Button">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                       CornerRadius="20"
                                       Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#FF4169FF"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Button.Style>
    </Button>

    <!-- Back to Login -->
    <TextBlock HorizontalAlignment="Center"
                  Margin="0,25,0,0">
            <Run Text="Already have an account? "
                Foreground="#FF888888"
                FontSize="13"/>
            <Hyperlink Foreground="#FF2E5BFF"
                      FontSize="13"
                      FontWeight="SemiBold"
                      TextDecorations="None"
                      Click="BackToLogin_Click">
                <Hyperlink.Style>
                    <Style TargetType="Hyperlink">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#FF4169FF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Hyperlink.Style>
                Log in
            </Hyperlink>
    </TextBlock>
</StackPanel>
</UserControl>
