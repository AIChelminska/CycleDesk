<UserControl x:Class="CycleDesk.Views.RegisterStep2Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="350">

    <StackPanel  Margin="0,250,0,0">
        <TextBlock Text="Set Your Password"
                  FontSize="22"
                  FontWeight="SemiBold"
                  Foreground="White"
                  HorizontalAlignment="Center"
                  Margin="0,0,0,30"/>

        <!-- Account Details (READ-ONLY) -->
        <Border Background="#FF1A1A1A"
               BorderBrush="#FF2A2A2A"
               BorderThickness="1"
               CornerRadius="15"
               Padding="20"
               Margin="0,0,0,25">
            <StackPanel>
                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="Username"
                              FontSize="11"
                              Foreground="#FF666666"
                              Margin="0,0,0,4"/>
                    <TextBlock x:Name="lblUsername"
                              Text="john_doe"
                              FontSize="15"
                              FontWeight="Medium"
                              Foreground="#FFCCCCCC"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="First Name"
                              FontSize="11"
                              Foreground="#FF666666"
                              Margin="0,0,0,4"/>
                    <TextBlock x:Name="lblFirstName"
                              Text="John"
                              FontSize="15"
                              FontWeight="Medium"
                              Foreground="#FFCCCCCC"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,12">
                    <TextBlock Text="Last Name"
                              FontSize="11"
                              Foreground="#FF666666"
                              Margin="0,0,0,4"/>
                    <TextBlock x:Name="lblLastName"
                              Text="Doe"
                              FontSize="15"
                              FontWeight="Medium"
                              Foreground="#FFCCCCCC"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="Account Type"
                              FontSize="11"
                              Foreground="#FF666666"
                              Margin="0,0,0,4"/>
                    <TextBlock x:Name="lblAccountType"
                              Text="Operator"
                              FontSize="15"
                              FontWeight="SemiBold"
                              Foreground="#FF2E5BFF"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Password -->
        <Border Background="#FF1E1E1E"
               BorderBrush="#FF3A3A3A"
               BorderThickness="1"
               CornerRadius="20"
               Margin="0,0,0,15">
            <Grid>
                <PasswordBox x:Name="txtPassword"
                            Height="45"
                            Padding="15,10"
                            FontSize="16"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            VerticalContentAlignment="Center"/>
                <TextBlock Text="Password" 
                          Foreground="#FF888888"
                          FontSize="14"
                          Margin="15,0,0,0"
                          VerticalAlignment="Center"
                          IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=txtPassword, Path=Password}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>

        <!-- Confirm Password -->
        <Border Background="#FF1E1E1E"
               BorderBrush="#FF3A3A3A"
               BorderThickness="1"
               CornerRadius="20"
               Margin="0,0,0,10">
            <Grid>
                <PasswordBox x:Name="txtConfirmPassword"
                            Height="45"
                            Padding="15,10"
                            FontSize="16"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            VerticalContentAlignment="Center"/>
                <TextBlock Text="Confirm Password" 
                          Foreground="#FF888888"
                          FontSize="14"
                          Margin="15,0,0,0"
                          VerticalAlignment="Center"
                          IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=txtConfirmPassword, Path=Password}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Border>

        <!-- Password Requirements -->
        <TextBlock Margin="5,5,0,20"
                  Foreground="#FF666666"
                  FontSize="11"
                  TextWrapping="Wrap">
            <Run Text="• Min 8 characters  • Uppercase  • Lowercase"/>
            <LineBreak/>
            <Run Text="• Number  • Special character (!@#$%...)"/>
        </TextBlock>

        <!-- Activate Button -->
        <Button Content="Activate Account"
               Width="220"
               Height="45"
               FontSize="16"
               FontWeight="SemiBold"
               Background="#FF2E5BFF"
               Foreground="White"
               BorderThickness="0"
               Cursor="Hand"
               Click="ActivateAccount_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                       CornerRadius="20"
                                       Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF4169FF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <!-- Back to Login Link -->
        <TextBlock HorizontalAlignment="Center"
                      Margin="0,25,0,0">
                <Run Text="Already have an account? "
                    Foreground="#FF888888"
                    FontSize="13"/>
                <Hyperlink Foreground="#FF2E5BFF"
                          FontSize="13"
                          FontWeight="SemiBold"
                          TextDecorations="None"
                          Click="BackToLogin_Click">
                    <Hyperlink.Style>
                        <Style TargetType="Hyperlink">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#FF4169FF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Hyperlink.Style>
                    Log in
                </Hyperlink>
        </TextBlock>
    </StackPanel>
</UserControl>
