<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="CycleDesk.SalesHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CycleDesk - Sales History" 
        Height="900" 
        Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5"
        WindowState="Maximized">

    <Window.Resources>
        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#FFF8F9FA"/>
            <Setter Property="BorderBrush" Value="#FFDEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#FF2D3E50"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Focusable="False"
                                        IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                               BorderBrush="{TemplateBinding BorderBrush}"
                                               BorderThickness="{TemplateBinding BorderThickness}"
                                               CornerRadius="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"
                                                                Margin="15,0,0,0"
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Left"/>
                                                <TextBlock Grid.Column="1"
                                                         Text="▼"
                                                         FontSize="10"
                                                         Foreground="#FF6C757D"
                                                         Margin="0,0,15,0"
                                                         VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <ContentPresenter x:Name="ContentSite"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            Margin="15,0,30,0"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            IsHitTestVisible="False"/>

                            <Popup x:Name="PART_Popup"
                                  Placement="Bottom"
                                  IsOpen="{TemplateBinding IsDropDownOpen}"
                                  AllowsTransparency="True"
                                  Focusable="False"
                                  PopupAnimation="Slide">
                                <Border Background="White"
                                       BorderBrush="#FFDEE2E6"
                                       BorderThickness="1"
                                       CornerRadius="8"
                                       Margin="0,5,0,0"
                                       MinWidth="{TemplateBinding ActualWidth}">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.15"/>
                                    </Border.Effect>
                                    <ScrollViewer MaxHeight="200" Margin="0">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Background="{TemplateBinding Background}"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="#FFF8F9FA"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FFE9ECEF"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- MENU BUTTON STYLE -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFADB5BD"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border Background="Transparent" CornerRadius="0"/>
                            <Grid x:Name="hoverLayer" Opacity="0">
                                <Border Width="3" HorizontalAlignment="Left" Background="White"/>
                                <Border Margin="3,0,0,0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="#33FFFFFF" Offset="0"/>
                                            <GradientStop Color="#03FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>
                            <Grid x:Name="activeLayer" Opacity="0">
                                <Border Width="3" HorizontalAlignment="Left" Background="White"/>
                                <Border Margin="3,0,0,0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="#33FFFFFF" Offset="0"/>
                                            <GradientStop Color="#03FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Tag" Value="Active">
                                <Setter TargetName="activeLayer" Property="Opacity" Value="1"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="Tag" Value="{x:Null}"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="hoverLayer" Property="Opacity" Value="1"/>
                                <Setter Property="Foreground" Value="White"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEWE MENU - IDENTYCZNE JAK W DASHBOARD -->
        <Border Grid.Column="0" Background="#181C3D">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo -->
                <StackPanel Grid.Row="0" Margin="0,0,0,0">
                    <Image Source="/Images/logo2.png"
                   Width="100" 
                   Height="100" 
                   RenderOptions.BitmapScalingMode="HighQuality"/>
                </StackPanel>

                <!-- Menu -->
                <StackPanel Grid.Row="1">
                    <TextBlock Text="MAIN MENU"
                       FontSize="11"
                       FontWeight="SemiBold"
                       Foreground="#FF7F8C9A"
                       Margin="20,0,0,15"/>

                    <!-- Dashboard -->
                    <Button x:Name="btnDashboard"
                   Style="{StaticResource MenuButtonStyle}"
                   Click="Dashboard_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊" FontSize="18" Margin="0,0,15,0"/>
                            <TextBlock Text="Dashboard" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Inventory -->
                    <Button x:Name="btnInventory"
                   Style="{StaticResource MenuButtonStyle}"
                   Click="Inventory_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📦" FontSize="18" Margin="0,0,15,0"/>
                            <TextBlock Text="Inventory" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Inventory Submenu -->
                    <StackPanel x:Name="submenuInventory" Visibility="Collapsed">
                        <Button Style="{StaticResource MenuButtonStyle}"
                       Padding="45,12"
                       Click="Products_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📦" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Products" FontSize="13" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
                       Padding="45,12"
                       Click="Categories_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📋" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Categories" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
                       Padding="45,12"
                       Click="InventoryStatus_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Inventory Status" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
                       Padding="45,12"
                       Click="GoodsReceipt_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📥" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Goods Receipt" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
                       Padding="45,12"
                       Click="Suppliers_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🚚" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Suppliers" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Sales -->
                    <Button x:Name="btnSales"
       Style="{StaticResource MenuButtonStyle}"
       Click="Sales_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🛒" FontSize="18" Margin="0,0,15,0"/>
                            <TextBlock Text="Sales" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>


                    <!-- Sales Submenu -->
                    <StackPanel x:Name="submenuSales" Visibility="Collapsed">
                        <Button Style="{StaticResource MenuButtonStyle}"
           Padding="45,12"
           Click="NewSale_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🖨️" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="New Sale" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
           Padding="45,12"
           Click="SalesHistory_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔍" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="History" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
           Padding="45,12"
           Click="Invoices_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📄" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Invoices" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Reports -->
                    <Button x:Name="btnReports"
   Style="{StaticResource MenuButtonStyle}"
   Click="Reports_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📈" FontSize="18" Margin="0,0,15,0"/>
                            <TextBlock Text="Reports" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Reports Submenu -->
                    <StackPanel x:Name="submenuReports" Visibility="Collapsed">
                        <Button Style="{StaticResource MenuButtonStyle}"
               Padding="45,12"
               Click="SalesReports_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💵" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Sales Reports" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
               Padding="45,12"
               Click="InventoryReports_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Inventory Reports" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
               Padding="45,12"
               Click="ProductsToOrder_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚠️" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Products to Order" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Administration -->
                    <Button x:Name="btnAdministration"
   Style="{StaticResource MenuButtonStyle}"
   Click="Administration_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙️" FontSize="18" Margin="0,0,15,0"/>
                            <TextBlock Text="Administration" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Administration Submenu -->
                    <StackPanel x:Name="submenuAdministration" Visibility="Collapsed">
                        <Button Style="{StaticResource MenuButtonStyle}"
               Padding="45,12"
               Click="Users_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👥" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Users" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
               Padding="45,12"
               Click="Settings_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔧" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Settings" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- User Info -->
                <StackPanel Grid.Row="2" Margin="20,0,20,30">
                    <Border Background="#FF1E2A36"
                   CornerRadius="10"
                   Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0">
                                <TextBlock x:Name="lblUserFullName"
                                  Text="Admin User"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Foreground="White"
                                  Margin="0,0,0,5"/>
                                <TextBlock x:Name="lblUserRole"
                                  Text="Supervisor"
                                  FontSize="12"
                                  Foreground="#FF7F8C9A"/>
                            </StackPanel>

                            <Button Grid.Row="1"
                           Content="Logout"
                           Margin="0,15,0,0"
                           Height="35"
                           Background="#FFDC3545"
                           Foreground="White"
                           BorderThickness="0"
                           FontWeight="SemiBold"
                           Cursor="Hand"
                           Click="Logout_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFC82333"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <StackPanel Grid.Row="0">
                    <TextBlock FontSize="28" FontWeight="Bold" Foreground="#FF2D3E50">
                <Run Text="🔍"/>
                <Run Text=" Sales History"/>
                    </TextBlock>
                    <TextBlock Text="View and search all completed transactions" 
                     FontSize="14" 
                     Foreground="#FF6C757D"
                     Margin="0,5,0,0"/>
                </StackPanel>

                <!-- FILTERS CARD -->
                <Border Grid.Row="2" 
       Background="White" 
       CornerRadius="12"
       BorderBrush="#FFDEE2E6"
       BorderThickness="1"
       Padding="25">
                    <Border.Effect>
                        <DropShadowEffect Color="#22000000" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="350"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Box (Left) -->
                        <Border Grid.Column="0"
               Background="#FFF8F9FA"
               CornerRadius="8"
               Padding="15,10"
               BorderBrush="#FFDEE2E6"
               BorderThickness="1"
               Height="44">
                            <Grid>
                                <!-- Search Icon -->
                                <Viewbox Width="18" Height="18" 
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
                                    <Canvas Width="24" Height="24">
                                        <Path Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                              Fill="#FF6C757D"/>
                                    </Canvas>
                                </Viewbox>

                                <TextBox x:Name="txtSearch"
                        FontSize="14"
                        Foreground="#FF2D3E50"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Center"
                        Padding="30,0,0,0"
                        TextChanged="Search_TextChanged">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Style.Triggers>
                                                <Trigger Property="Text" Value="">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <VisualBrush Stretch="None" AlignmentX="Left">
                                                                <VisualBrush.Visual>
                                                                    <TextBlock Text="Search transactions..." 
                                                              Foreground="#FF6C757D" 
                                                              FontSize="14"
                                                              Margin="30,0,0,0"/>
                                                                </VisualBrush.Visual>
                                                            </VisualBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </Grid>
                        </Border>

                        <!-- Filters (Right Side) -->
                        <StackPanel Grid.Column="1"
                   Orientation="Horizontal"
                   HorizontalAlignment="Right"
                   Margin="15,0,0,0">

                            <!-- Date From Filter -->
                            <Border Background="#FFF8F9FA"
                   CornerRadius="8"
                   BorderBrush="#FFDEE2E6"
                   BorderThickness="1"
                   Padding="12,0"
                   Height="44"
                   Margin="0,0,10,0">
                                <DatePicker x:Name="dpDateFrom"
                          Width="120"
                          BorderThickness="0"
                          Background="Transparent"
                          FontSize="13"
                          Foreground="#FF2D3E50"
                                            VerticalContentAlignment="Center"
                          SelectedDateChanged="DateFilter_Changed">
                                    <DatePicker.Resources>
                                        <Style TargetType="DatePickerTextBox">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Foreground" Value="#FF2D3E50"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        </Style>
                                    </DatePicker.Resources>
                                </DatePicker>
                            </Border>

                            <!-- Date To Filter -->
                            <Border Background="#FFF8F9FA"
                   CornerRadius="8"
                   BorderBrush="#FFDEE2E6"
                   BorderThickness="1"
                   Padding="12,0"
                   Height="44"
                   Margin="0,0,10,0">
                                <DatePicker x:Name="dpDateTo"
                          Width="120"
                          BorderThickness="0"
                          Background="Transparent"
                          FontSize="13"
                          Foreground="#FF2D3E50"
                                            VerticalContentAlignment="Center"
                          SelectedDateChanged="DateFilter_Changed">
                                    <DatePicker.Resources>
                                        <Style TargetType="DatePickerTextBox">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Foreground" Value="#FF2D3E50"/>
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        </Style>
                                    </DatePicker.Resources>
                                </DatePicker>
                            </Border>

                            <!-- Document Type Filter -->
                            <ComboBox x:Name="cmbDocumentType"
          Width="120"
          Height="44"
          Margin="0,0,10,0"
          FontSize="13"
          SelectionChanged="DocumentTypeFilter_Changed"
          Style="{StaticResource FilterComboBoxStyle}">
                                <ComboBoxItem Content="Type" IsSelected="True" IsEnabled="False"/>
                                <ComboBoxItem Content="All"/>
                                <ComboBoxItem Content="Receipt"/>
                                <ComboBoxItem Content="Invoice"/>
                            </ComboBox>

                            <!-- Payment Method Filter -->
                            <ComboBox x:Name="cmbPaymentMethod"
          Width="120"
          Height="44"
          Margin="0,0,10,0"
          FontSize="13"
          SelectionChanged="PaymentMethodFilter_Changed"
          Style="{StaticResource FilterComboBoxStyle}">
                                <ComboBoxItem Content="Payment" IsSelected="True" IsEnabled="False"/>
                                <ComboBoxItem Content="All"/>
                                <ComboBoxItem Content="Cash"/>
                                <ComboBoxItem Content="Card"/>
                            </ComboBox>

                            <!-- Clear Button -->
                            <Button Width="44"
       Height="44"
       Background="#FF2D3E50"
       BorderThickness="0"
       Cursor="Hand"
       Click="ClearFilters_Click">
                                <Button.Content>
                                    <Viewbox Width="18" Height="18">
                                        <Canvas Width="24" Height="24">
                                            <Path Data="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
                      Fill="White"/>
                                        </Canvas>
                                    </Viewbox>
                                </Button.Content>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                               CornerRadius="8"
                               BorderBrush="#FFDEE2E6"
                               BorderThickness="1">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF1a252f"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- TRANSACTIONS TABLE - TYLKO JEDNA! -->
                <Border Grid.Row="4" 
                Margin="0,0,0,0"
                Background="White"
                CornerRadius="12"
                BorderBrush="#FFDEE2E6"
                BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Color="#22000000" Direction="270" ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Table Header -->
                        <Border Grid.Row="0" 
                        Background="#FF2D3E50"
                        CornerRadius="12,12,0,0"
                        Height="50">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" BorderBrush="#FF4A5568" BorderThickness="0,0,1,0" Padding="15,0">
                                    <TextBlock Text="Transaction #" FontWeight="SemiBold" FontSize="12" Foreground="White" VerticalAlignment="Center" TextAlignment="Center"/>
                                </Border>

                                <Border Grid.Column="1" BorderBrush="#FF4A5568" BorderThickness="0,0,1,0" Padding="15,0">
                                    <TextBlock Text="Date &amp; Time" FontSize="12" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center" TextAlignment="Center"/>
                                </Border>

                                <Border Grid.Column="2" BorderBrush="#FF4A5568" BorderThickness="0,0,1,0" Padding="15,0">
                                    <TextBlock Text="Type" FontWeight="SemiBold" FontSize="12" Foreground="White" VerticalAlignment="Center" TextAlignment="Center"/>
                                </Border>

                                <Border Grid.Column="3" BorderBrush="#FF4A5568" BorderThickness="0,0,1,0" Padding="15,0">
                                    <TextBlock Text="Items" FontWeight="SemiBold" FontSize="12" Foreground="White" VerticalAlignment="Center" TextAlignment="Center"/>
                                </Border>

                                <Border Grid.Column="4" BorderBrush="#FF4A5568" BorderThickness="0,0,1,0" Padding="15,0">
                                    <TextBlock Text="Cashier" FontWeight="SemiBold" FontSize="12" Foreground="White" VerticalAlignment="Center" TextAlignment="Center"/>
                                </Border>

                                <Border Grid.Column="5" BorderBrush="#FF4A5568" BorderThickness="0,0,1,0" Padding="15,0">
                                    <TextBlock Text="Payment" FontWeight="SemiBold" FontSize="12" Foreground="White" VerticalAlignment="Center" TextAlignment="Center"/>
                                </Border>

                                <Border Grid.Column="6" Padding="15,0">
                                    <TextBlock Text="Total" FontWeight="SemiBold" FontSize="12" Foreground="White" VerticalAlignment="Center" TextAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Transactions List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="transactionsList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#FFDEE2E6" 
                                        BorderThickness="0,1,0,0" 
                                        Background="White"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="TransactionRow_Click"
                                        MouseLeave="TransactionRow_MouseLeave">
                                            <Grid Height="60">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Transaction Number -->
                                                <Border Grid.Column="0" BorderBrush="#FFDEE2E6" BorderThickness="0,0,1,0" Padding="15,0">
                                                    <TextBlock Text="{Binding TransactionNumber}" 
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       Foreground="#FF2D3E50"
                                                       VerticalAlignment="Center"
                                                       TextAlignment="Center"/>
                                                </Border>

                                                <!-- Date & Time -->
                                                <Border Grid.Column="1" BorderBrush="#FFDEE2E6" BorderThickness="0,0,1,0" Padding="15,0">
                                                    <TextBlock Text="{Binding DateTimeFormatted}" 
                                                       FontSize="13"
                                                       Foreground="#FF6C757D"
                                                       VerticalAlignment="Center"
                                                       TextAlignment="Center"/>
                                                </Border>

                                                <!-- Document Type -->
                                                <Border Grid.Column="2" BorderBrush="#FFDEE2E6" BorderThickness="0,0,1,0" Padding="15,0">
                                                    <Border Background="{Binding DocumentTypeColor}"
                                                    Padding="10,5"
                                                    CornerRadius="6"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding DocumentType}" 
                                                           FontSize="11"
                                                           FontWeight="SemiBold"
                                                           Foreground="White"/>
                                                    </Border>
                                                </Border>

                                                <!-- Items Count -->
                                                <Border Grid.Column="3" BorderBrush="#FFDEE2E6" BorderThickness="0,0,1,0" Padding="15,0">
                                                    <TextBlock Text="{Binding ItemsCount, StringFormat='{}{0} items'}" 
                                                       FontSize="13"
                                                       Foreground="#FF6C757D"
                                                       VerticalAlignment="Center"
                                                       TextAlignment="Center"/>
                                                </Border>

                                                <!-- Cashier -->
                                                <Border Grid.Column="4" BorderBrush="#FFDEE2E6" BorderThickness="0,0,1,0" Padding="15,0">
                                                    <TextBlock Text="{Binding CashierName}" 
                                                       FontSize="13"
                                                       Foreground="#FF6C757D"
                                                       VerticalAlignment="Center"
                                                       TextAlignment="Center"/>
                                                </Border>

                                                <!-- Payment Method -->
                                                <Border Grid.Column="5" BorderBrush="#FFDEE2E6" BorderThickness="0,0,1,0" Padding="15,0">
                                                    <Border Background="{Binding PaymentMethodColor}"
                                                    Padding="10,5"
                                                    CornerRadius="6"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding PaymentMethod}" 
                                                           FontSize="11"
                                                           FontWeight="SemiBold"
                                                           Foreground="White"/>
                                                    </Border>
                                                </Border>

                                                <!-- Total -->
                                                <Border Grid.Column="6" Padding="15,0">
                                                    <TextBlock Text="{Binding Total, StringFormat='PLN {0:N2}'}" 
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       Foreground="#FF2D3E50"
                                                       VerticalAlignment="Center"
                                                       TextAlignment="Center"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- SUMMARY BAR (Bottom) -->
                        <Border Grid.Row="2"
                       Background="#FFF8F9FA"
                       BorderBrush="#FFDEE2E6"
                       BorderThickness="0,1,0,0"
                       Padding="25,15"
                       CornerRadius="0,0,12,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Total Transactions -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock x:Name="lblTotalTransactions"
                                      Text="Total Transactions: 0"
                                      FontSize="14"
                                      FontWeight="SemiBold"
                                      Foreground="#FF2D3E50"
                                      VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Total Revenue -->
                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <TextBlock Text="Total Revenue: "
                                      FontSize="14"
                                      FontWeight="SemiBold"
                                      Foreground="#FF6C757D"
                                      VerticalAlignment="Center"/>
                                    <TextBlock x:Name="lblTotalRevenue"
                                      Text="PLN 0.00"
                                      FontSize="16"
                                      FontWeight="Bold"
                                      Foreground="#FF28A745"
                                      VerticalAlignment="Center"
                                      Margin="5,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- TRANSACTION DETAILS POPUP -->
        <Popup x:Name="transactionDetailsPopup"
               PlacementTarget="{Binding ElementName=transactionsList}"
               Placement="Mouse"
               StaysOpen="False"
               AllowsTransparency="True">
            <Border Background="White"
                    Width="350"
                    CornerRadius="12"
                    BorderBrush="#FFDEE2E6"
                    BorderThickness="1"
                    Padding="0">
                <Border.Effect>
                    <DropShadowEffect Color="#44000000" Direction="270" ShadowDepth="4" BlurRadius="20" Opacity="0.5"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Popup Header -->
                    <Border Background="#FF2D3E50"
                            CornerRadius="12,12,0,0"
                            Padding="20,15">
                        <TextBlock Text="Transaction Details"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </Border>

                    <!-- Transaction Content -->
                    <Border Padding="20">
                        <StackPanel>
                            <!-- Transaction Number -->
                            <TextBlock x:Name="popupTransactionNumber"
                                   Text="#TRX202511161443522"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#FF2D3E50"
                                   Margin="0,0,0,10"/>

                            <!-- Date & Time -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Date &amp; Time:"
                                       FontSize="13"
                                       Foreground="#FF6C757D"
                                       Width="100"/>
                                <TextBlock Grid.Column="1"
                                       x:Name="popupDateTime"
                                       Text="16 Nov 2025, 14:30"
                                       FontSize="13"
                                       Foreground="#FF2D3E50"
                                       HorizontalAlignment="Right"/>
                            </Grid>

                            <!-- Cashier -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Cashier:"
                                       FontSize="13"
                                       Foreground="#FF6C757D"
                                       Width="100"/>
                                <TextBlock Grid.Column="1"
                                       x:Name="popupCashier"
                                       Text="Admin User"
                                       FontSize="13"
                                       Foreground="#FF2D3E50"
                                       HorizontalAlignment="Right"/>
                            </Grid>

                            <!-- Payment Method -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Payment:"
                                       FontSize="13"
                                       Foreground="#FF6C757D"
                                       Width="100"/>
                                <Border Grid.Column="1"
                                    x:Name="popupPaymentBadge"
                                    Background="#FF28A745"
                                    Padding="8,4"
                                    CornerRadius="6"
                                    HorizontalAlignment="Right">
                                    <TextBlock x:Name="popupPaymentMethod"
                                           Text="Cash"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                                </Border>
                            </Grid>

                            <!-- Separator -->
                            <Border Background="#FFDEE2E6"
                                Height="1"
                                Margin="0,0,0,15"/>

                            <!-- Items Header -->
                            <TextBlock Text="Items:"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#FF2D3E50"
                                   Margin="0,0,0,10"/>

                            <!-- Items List -->
                            <ItemsControl x:Name="popupItemsList"
                                      Margin="0,0,0,15">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#FFF8F9FA"
                                            CornerRadius="8"
                                            Padding="12"
                                            Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0"
                                                       Text="{Binding ProductName}"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       Foreground="#FF2D3E50"
                                                       TextTrimming="CharacterEllipsis"/>

                                                <Grid Grid.Row="1" Margin="0,5,0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0">
                                                    <Run Text="{Binding SKU}" Foreground="#FF6C757D" FontSize="12"/>
                                                    <Run Text=" • " Foreground="#FF6C757D" FontSize="12"/>
                                                    <Run Text="Qty: " Foreground="#FF6C757D" FontSize="12"/>
                                                    <Run Text="{Binding Quantity}" Foreground="#FF6C757D" FontSize="12"/>
                                                    <Run Text=" × PLN " Foreground="#FF6C757D" FontSize="12"/>
                                                    <Run Text="{Binding UnitPrice, StringFormat=N2}" Foreground="#FF6C757D" FontSize="12"/>
                                                    </TextBlock>

                                                    <TextBlock Grid.Column="1"
                                                           Text="{Binding Subtotal, StringFormat='PLN {0:N2}'}"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Foreground="#FF2D3E50"/>
                                                </Grid>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Separator -->
                            <Border Background="#FFDEE2E6"
                                Height="1"
                                Margin="0,0,0,15"/>

                            <!-- Total -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="TOTAL:"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#FF2D3E50"/>
                                <TextBlock Grid.Column="1"
                                       x:Name="popupTotal"
                                       Text="PLN 3,300.08"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#FF28A745"
                                       HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Actions Footer -->
                    <Border Background="#FFF8F9FA"
                            BorderBrush="#FFDEE2E6"
                            BorderThickness="0,1,0,0"
                            CornerRadius="0,0,12,12"
                            Padding="20,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- View Button -->
                            <Button Grid.Column="0"
                                    Content="👁️ View"
                                    Height="36"
                                    Background="#FF2D3E50"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"
                                    Click="ViewTransaction_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF1a252f"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <!-- Print Button -->
                            <Button Grid.Column="2"
                                    Content="🖨️ Print"
                                    Height="36"
                                    Background="White"
                                    Foreground="#FF2D3E50"
                                    BorderBrush="#FFDEE2E6"
                                    BorderThickness="1"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"
                                    Click="PrintTransaction_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFF8F9FA"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Window>