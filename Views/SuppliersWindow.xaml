            HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,30">
                        <TextBlock Text="Add new supplier"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#FF2D3E50"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>

                        <!-- Close X Button -->
                        <Button Content="✕"
                        Width="32"
                        Height="32"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        Foreground="#FF6C757D"
                        BorderThickness="0"
                        FontSize="20"
                        Cursor="Hand"
                        Click="CloseModal_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFF8F9FA"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>

                    <!-- Form Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Form Fields -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Row 0: Supplier Name | Contact Person -->
                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,20">
                                    <TextBlock Text="Supplier Name: *"
               FontSize="13"
               FontWeight="SemiBold"
               Foreground="#FF6C757D"
               Margin="0,0,0,8"/>
                                    <TextBox x:Name="modalTxtSupplierName"
             Height="40"
             Padding="12,0"
             FontSize="14"
             BorderBrush="#FFDEE2E6"
             BorderThickness="1"
             VerticalContentAlignment="Center">
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="8"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,20">
                                    <TextBlock Text="Contact Person: *"
               FontSize="13"
               FontWeight="SemiBold"
               Foreground="#FF6C757D"
               Margin="0,0,0,8"/>
                                    <TextBox x:Name="modalTxtContactPerson"
             Height="40"
             Padding="12,0"
             FontSize="14"
             BorderBrush="#FFDEE2E6"
             BorderThickness="1"
             VerticalContentAlignment="Center">
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="8"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </StackPanel>

                                <!-- Row 1: Phone | Email -->
                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,20">
                                    <TextBlock Text="Phone: *"
               FontSize="13"
               FontWeight="SemiBold"
               Foreground="#FF6C757D"
               Margin="0,0,0,8"/>
                                    <TextBox x:Name="modalTxtPhone"
             Height="40"
             Padding="12,0"
             FontSize="14"
             BorderBrush="#FFDEE2E6"
             BorderThickness="1"
             VerticalContentAlignment="Center">
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="8"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,20">
                                    <TextBlock Text="Email: *"
               FontSize="13"
               FontWeight="SemiBold"
               Foreground="#FF6C757D"
               Margin="0,0,0,8"/>
                                    <TextBox x:Name="modalTxtEmail"
             Height="40"
             Padding="12,0"
             FontSize="14"
             BorderBrush="#FFDEE2E6"
             BorderThickness="1"
             VerticalContentAlignment="Center">
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="8"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </StackPanel>

                                <!-- Row 2: Address (Full Width) -->
                                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,20">
                                    <TextBlock Text="Street Address:"
               FontSize="13"
               FontWeight="SemiBold"
               Foreground="#FF6C757D"
               Margin="0,0,0,8"/>
                                    <TextBox x:Name="modalTxtAddress"
             Height="40"
             Padding="12,0"
             FontSize="14"
             BorderBrush="#FFDEE2E6"
             BorderThickness="1"
             VerticalContentAlignment="Center">
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="8"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </StackPanel>

                                <!-- Row 3: City | Postal Code -->
                                <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,0,20">
                                    <TextBlock Text="City:"
               FontSize="13"
               FontWeight="SemiBold"
               Foreground="#FF6C757D"
               Margin="0,0,0,8"/>
                                    <TextBox x:Name="modalTxtCity"
             Height="40"
             Padding="12,0"
             FontSize="14"
             BorderBrush="#FFDEE2E6"
             BorderThickness="1"
             VerticalContentAlignment="Center">
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="8"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </StackPanel>

                                <StackPanel Grid.Row="3" Grid.Column="2" Margin="0,0,0,20">
                                    <TextBlock Text="Postal Code:"
               FontSize="13"
               FontWeight="SemiBold"
               Foreground="#FF6C757D"
               Margin="0,0,0,8"/>
                                    <TextBox x:Name="modalTxtPostalCode"
             Height="40"
             Padding="12,0"
             FontSize="14"
             BorderBrush="#FFDEE2E6"
             BorderThickness="1"
             VerticalContentAlignment="Center">
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="8"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </StackPanel>

                                <!-- Row 4: Tax ID | Country -->
                                <StackPanel Grid.Row="4" Grid.Column="0" Margin="0,0,0,20">
                                    <TextBlock Text="Tax ID (NIP):"
               FontSize="13"
               FontWeight="SemiBold"
               Foreground="#FF6C757D"
               Margin="0,0,0,8"/>
                                    <TextBox x:Name="modalTxtTaxID"
             Height="40"
             Padding="12,0"
             FontSize="14"
             BorderBrush="#FFDEE2E6"
             BorderThickness="1"
             VerticalContentAlignment="Center">
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="8"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>
                                </StackPanel>
                                <StackPanel Grid.Row="4" Grid.Column="2" Margin="0,0,0,20">
                                    <TextBlock Text="Country:"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="#FF6C757D"
                                       Margin="0,0,0,8"/>
                                    <ComboBox x:Name="modalCmbCountry"
                                      Height="40"
                                      FontSize="14"
                                      Padding="12,0"
                                      BorderBrush="#FFDEE2E6"
                                      Style="{StaticResource FilterComboBoxStyle}">
                                        <ComboBoxItem Content="Poland" IsSelected="True"/>
                                        <ComboBoxItem Content="Germany"/>
                                        <ComboBoxItem Content="Czech Republic"/>
                                        <ComboBoxItem Content="Slovakia"/>
                                        <ComboBoxItem Content="Other"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Row 5: Status (Full Width) -->
                                <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,20">
                                    <TextBlock Text="Status:"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="#FF6C757D"
                                       Margin="0,0,0,8"/>
                                    <ComboBox x:Name="modalCmbStatus"
                                      Height="40"
                                      FontSize="14"
                                      Padding="12,0"
                                      BorderBrush="#FFDEE2E6"
                                      Style="{StaticResource FilterComboBoxStyle}">
                                        <ComboBoxItem Content="Active" IsSelected="True"/>
                                        <ComboBoxItem Content="Pending"/>
                                        <ComboBoxItem Content="Inactive"/>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>

                            <!-- Notes (Outside Grid for Full Width) -->
                            <StackPanel Margin="0,0,0,0">
                                <TextBlock Text="Notes / Additional Information:"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#FF6C757D"
                                   Margin="0,0,0,8"/>
                                <TextBox x:Name="modalTxtNotes"
                                 Height="80"
                                 Padding="12,10"
                                 FontSize="14"
                                 BorderBrush="#FFDEE2E6"
                                 BorderThickness="1"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto">
                                    <TextBox.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="8"/>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer Buttons -->
                    <Grid Grid.Row="2" Margin="0,30,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Cancel Button -->
                        <Button Grid.Column="0"
                        Content="Cancel"
                        Height="50"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Background="#FFF8F9FA"
                        Foreground="#FF6C757D"
                        BorderThickness="1"
                        BorderBrush="#FFDEE2E6"
                        Cursor="Hand"
                        Click="CancelModal_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="10">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFE9ECEF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Save Button -->
                        <Button Grid.Column="2"
                        Content="Save Supplier"
                        Height="50"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Background="#FF2D3E50"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="SaveSupplier_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                CornerRadius="10">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF1E2A36"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#FF141D28"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>