<Window x:Class="CycleDesk.SuppliersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="CycleDesk - Suppliers" 
        Height="900" 
        Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Action Button Style (Edit/Delete) -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Edit Button Style -->
        <Style x:Key="EditButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#FF2D3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF1E2A36"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF141D28"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Delete Button Style -->
        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#FFDC3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFC82333"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFB21F2D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- MENU BUTTON STYLE -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFADB5BD"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Warstwa podstawowa -->
                            <Border Background="Transparent" CornerRadius="0"/>

                            <!-- HOVER GRADIENT -->
                            <Grid x:Name="hoverLayer" Opacity="0">
                                <!-- Biały pasek z lewej -->
                                <Border Width="3"
                                   HorizontalAlignment="Left"
                                   Background="White"/>

                                <!-- Gradient -->
                                <Border Margin="3,0,0,0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="#33FFFFFF" Offset="0"/>
                                            <GradientStop Color="#03FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>

                            <!-- ACTIVE STATE (taki sam gradient!) -->
                            <Grid x:Name="activeLayer" Opacity="0">
                                <!-- Biały pasek z lewej -->
                                <Border Width="3"
                                   HorizontalAlignment="Left"
                                   Background="White"/>

                                <!-- Gradient -->
                                <Border Margin="3,0,0,0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                            <GradientStop Color="#33FFFFFF" Offset="0"/>
                                            <GradientStop Color="#03FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>

                            <!-- Zawartość -->
                            <ContentPresenter Margin="{TemplateBinding Padding}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="Center"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- AKTYWNY PRZYCISK -->
                            <Trigger Property="Tag" Value="Active">
                                <Setter TargetName="activeLayer" Property="Opacity" Value="1"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>

                            <!-- HOVER (tylko dla nieaktywnych) -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="Tag" Value="{x:Null}"/>
                                </MultiTrigger.Conditions>
                                <MultiTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="hoverLayer"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="0" To="1"
                                                         Duration="0:0:0.25">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.EnterActions>
                                <MultiTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="hoverLayer"
                                                         Storyboard.TargetProperty="Opacity"
                                                         From="1" To="0"
                                                         Duration="0:0:0.25">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.ExitActions>
                                <Setter Property="Foreground" Value="White"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#FFF8F9FA"/>
            <Setter Property="BorderBrush" Value="#FFDEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#FF2D3E50"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Focusable="False"
                                        IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                               BorderBrush="{TemplateBinding BorderBrush}"
                                               BorderThickness="{TemplateBinding BorderThickness}"
                                               CornerRadius="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"
                                                                Margin="15,0,0,0"
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Left"/>
                                                <TextBlock Grid.Column="1"
                                                         Text="▼"
                                                         FontSize="10"
                                                         Foreground="#FF6C757D"
                                                         Margin="0,0,15,0"
                                                         VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <ContentPresenter x:Name="ContentSite"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            Margin="15,0,30,0"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            IsHitTestVisible="False"/>

                            <Popup x:Name="PART_Popup"
                                  Placement="Bottom"
                                  IsOpen="{TemplateBinding IsDropDownOpen}"
                                  AllowsTransparency="True"
                                  Focusable="False"
                                  PopupAnimation="Slide">
                                <Border Background="White"
                                       BorderBrush="#FFDEE2E6"
                                       BorderThickness="1"
                                       CornerRadius="8"
                                       Margin="0,5,0,0"
                                       MinWidth="{TemplateBinding ActualWidth}">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.15"/>
                                    </Border.Effect>
                                    <ScrollViewer MaxHeight="200" Margin="0">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBoxItem Style -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Background="{TemplateBinding Background}"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="#FFF8F9FA"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FFE9ECEF"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEWE MENU - IDENTYCZNE JAK W PRODUCTS -->
        <Border Grid.Column="0" Background="#181C3D">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo -->
                <StackPanel Grid.Row="0" Margin="0,0,0,0">
                    <Image Source="/Images/logo2.png"
                           Width="100" 
                           Height="100" 
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </StackPanel>

                <!-- Menu -->
                <StackPanel Grid.Row="1">
                    <TextBlock Text="MAIN MENU"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="#FF7F8C9A"
                               Margin="20,0,0,15"/>

                    <!-- Dashboard -->
                    <Button x:Name="btnDashboard"
                            Style="{StaticResource MenuButtonStyle}"
                            Click="Dashboard_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊" FontSize="18" Margin="0,0,15,0"/>
                            <TextBlock Text="Dashboard" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Inventory -->
                    <Button x:Name="btnInventory"
                            Style="{StaticResource MenuButtonStyle}"
                            Click="Inventory_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📦" FontSize="18" Margin="0,0,15,0"/>
                            <TextBlock Text="Inventory" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Inventory Submenu -->
                    <StackPanel x:Name="submenuInventory" Visibility="Collapsed">
                        <Button Style="{StaticResource MenuButtonStyle}"
                                Padding="45,12"
                                Click="Products_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📦" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Products" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
                                Padding="45,12"
                                Click="Categories_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📋" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Categories" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
                                Padding="45,12"
                                Click="InventoryStatus_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Inventory Status" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
                                Padding="45,12"
                                Click="GoodsReceipt_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📥" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Goods Receipt" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
                                Padding="45,12"
                                Click="Suppliers_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🚚" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Suppliers" FontSize="13" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Sales -->
                    <Button x:Name="btnSales"
                            Style="{StaticResource MenuButtonStyle}"
                            Click="Sales_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🛒" FontSize="18" Margin="0,0,15,0"/>
                            <TextBlock Text="Sales" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Sales Submenu -->
                    <StackPanel x:Name="submenuSales" Visibility="Collapsed">
                        <Button Style="{StaticResource MenuButtonStyle}"
                                Padding="45,12"
                                Click="NewSale_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🖨️" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="New Sale" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
                                Padding="45,12"
                                Click="SalesHistory_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔍" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="History" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
                                Padding="45,12"
                                Click="Invoices_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📄" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Invoices" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Reports -->
                    <Button x:Name="btnReports"
                            Style="{StaticResource MenuButtonStyle}"
                            Click="Reports_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📈" FontSize="18" Margin="0,0,15,0"/>
                            <TextBlock Text="Reports" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Reports Submenu -->
                    <StackPanel x:Name="submenuReports" Visibility="Collapsed">
                        <Button Style="{StaticResource MenuButtonStyle}"
                                Padding="45,12"
                                Click="SalesReports_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💵" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Sales Reports" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
                                Padding="45,12"
                                Click="InventoryReports_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Inventory Reports" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
                                Padding="45,12"
                                Click="ProductsToOrder_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚠️" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Products to Order" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Administration -->
                    <Button x:Name="btnAdministration"
                            Style="{StaticResource MenuButtonStyle}"
                            Click="Administration_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙️" FontSize="18" Margin="0,0,15,0"/>
                            <TextBlock Text="Administration" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Administration Submenu -->
                    <StackPanel x:Name="submenuAdministration" Visibility="Collapsed">
                        <Button Style="{StaticResource MenuButtonStyle}"
                                Padding="45,12"
                                Click="Users_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👥" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Users" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MenuButtonStyle}"
                                Padding="45,12"
                                Click="Settings_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🔧" FontSize="14" Margin="0,0,12,0" Opacity="0.7"/>
                                <TextBlock Text="Settings" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- User Info -->
                <StackPanel Grid.Row="2" Margin="20,0,20,30">
                    <Border Background="#FF1E2A36"
                            CornerRadius="10"
                            Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0">
                                <TextBlock x:Name="lblUserFullName"
                                           Text="Admin User"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           Margin="0,0,0,5"/>
                                <TextBlock x:Name="lblUserRole"
                                           Text="Supervisor"
                                           FontSize="12"
                                           Foreground="#FF7F8C9A"/>
                            </StackPanel>

                            <Button Grid.Row="1"
                                    Content="Logout"
                                    Margin="0,15,0,0"
                                    Height="35"
                                    Background="#FFDC3545"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"
                                    Click="Logout_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFC82333"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- GŁÓWNA ZAWARTOŚĆ -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Górny bar -->
            <Border Grid.Row="0" 
                    Background="White" 
                    BorderBrush="#FFE0E0E0" 
                    BorderThickness="0,0,0,1"
                    Padding="30,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="🚚" FontSize="32" Margin="0,0,15,0"/>
                        <TextBlock Text="Suppliers"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#FF2D3E50"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <Button Content="➕ Add New Supplier"
                            Height="45"
                            Padding="25,0"
                            Background="#FF2D3E50"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            FontSize="14"
                            Cursor="Hand"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Click="OpenAddSupplierModal_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="10"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF1E2A36"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#FF141D28"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="30">
                <Border Background="White"
                        CornerRadius="15"
                        Padding="30">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" 
                                          ShadowDepth="0" 
                                          Opacity="0.1" 
                                          Color="Black"/>
                    </Border.Effect>

                    <StackPanel>
                        <!-- Search & Filters -->
                        <Grid Margin="0,0,0,30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="450"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Search Box -->
                            <Border Grid.Column="0"
                                    Background="#FFF8F9FA"
                                    CornerRadius="10"
                                    Padding="15,12"
                                    BorderBrush="#FFDEE2E6"
                                    BorderThickness="1">
                                <Grid>
                                    <!-- Search Icon -->
                                    <Viewbox Width="18" Height="18" 
                                             HorizontalAlignment="Left"
                                             VerticalAlignment="Center"
                                             Margin="0,0,10,0">
                                        <Canvas Width="24" Height="24">
                                            <Path Data="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"
                                                  Fill="#FF2D3E50"/>
                                        </Canvas>
                                    </Viewbox>

                                    <TextBox x:Name="txtSearch"
                                             Text=""
                                             FontSize="14"
                                             Foreground="#FF2D3E50"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             VerticalAlignment="Center"
                                             Padding="35,0,0,0"
                                             GotFocus="SearchTextBox_GotFocus"
                                             LostFocus="SearchTextBox_LostFocus">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Style.Triggers>
                                                    <Trigger Property="Text" Value="">
                                                        <Setter Property="Background">
                                                            <Setter.Value>
                                                                <VisualBrush Stretch="None" AlignmentX="Left">
                                                                    <VisualBrush.Visual>
                                                                        <TextBlock Text="Search Supplier..." 
                                                                                   Foreground="#FF6C757D" 
                                                                                   FontSize="14"
                                                                                   Margin="30,0,0,0"/>
                                                                    </VisualBrush.Visual>
                                                                </VisualBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </Grid>
                            </Border>

                            <!-- Filters -->
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right">

                                <!-- Supplier Name Filter -->
                                <ComboBox x:Name="cmbSupplierName"
              Width="180"
              Height="44"
              FontSize="13"
              Margin="0,0,10,0"
              Style="{StaticResource FilterComboBoxStyle}">
                                    <ComboBoxItem Content="Supplier Name" IsSelected="True"/>
                                    <ComboBoxItem Content="All Suppliers"/>
                                    <ComboBoxItem Content="BikeWholesale Ltd"/>
                                    <ComboBoxItem Content="Shimano Poland"/>
                                    <ComboBoxItem Content="Continental Tires"/>
                                    <ComboBoxItem Content="SRAM Distribution"/>
                                    <ComboBoxItem Content="Trek Bikes Poland"/>
                                </ComboBox>

                                <!-- Status Filter -->
                                <ComboBox x:Name="cmbStatus"
                                          Width="150"
                                          Height="44"
                                          FontSize="13"
                                          Margin="0,0,10,0"
                                          Style="{StaticResource FilterComboBoxStyle}">
