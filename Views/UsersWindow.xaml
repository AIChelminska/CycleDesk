<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="CycleDesk.UsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:CycleDesk.Controls"
        Title="CycleDesk - Users Management" 
        Height="900" 
        Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="16,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Edit Button Style -->
        <Style x:Key="EditButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#FF2D3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF1E2A36"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Reset Password Button Style -->
        <Style x:Key="ResetPasswordButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#FF17A2B8"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF138496"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Deactivate Button Style -->
        <Style x:Key="DeactivateButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#FFFFC107"/>
            <Setter Property="Foreground" Value="#FF2D3E50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE0A800"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Delete Button Style -->
        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#FFDC3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFC82333"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Activate Button Style -->
        <Style x:Key="ActivateButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#FF28A745"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF218838"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Side Menu -->
        <controls:SideMenuControl x:Name="sideMenu" Grid.Column="0"/>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar -->
            <Border Grid.Row="0" Background="White" BorderBrush="#FFE0E0E0" BorderThickness="0,0,0,1" Padding="30,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ‘¥" FontSize="32" Margin="0,0,15,0"/>
                        <TextBlock Text="Users Management" FontSize="28" FontWeight="Bold"
                                  Foreground="#FF2D3E50" VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtUserCount" Text="(0 users)" FontSize="14"
                                  Foreground="#FF6C757D" VerticalAlignment="Center" Margin="15,0,0,0"/>
                    </StackPanel>

                    <Button Content="âž• Add New User" Height="45" Padding="25,0"
                           Background="#FF2D3E50" Foreground="White" BorderThickness="0"
                           FontWeight="SemiBold" FontSize="14" Cursor="Hand"
                           HorizontalAlignment="Right" VerticalAlignment="Center"
                           Click="AddNewUser_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="10" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF1E2A36"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30">
                <StackPanel>
                    <!-- Statistics Cards - jak w Dashboard -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Card 1: Total Users -->
                        <Border Grid.Column="0" Background="White" CornerRadius="15" 
                               Margin="0,0,15,0" Padding="30" Height="180">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1" Color="Black"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Text="Total Users" FontSize="16" 
                                          Foreground="#FF6C757D" Margin="0,0,0,15"/>
                                
                                <TextBlock x:Name="txtTotalUsers" Grid.Row="1" Text="0" 
                                          FontSize="36" FontWeight="Bold" Foreground="#FF2D3E50"
                                          VerticalAlignment="Center"/>
                                
                                <StackPanel Grid.Row="2" Orientation="Horizontal">
                                    <TextBlock Text="ðŸ‘¥" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="registered accounts" FontSize="14" Foreground="#FF6C757D"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Card 2: Active Users -->
                        <Border Grid.Column="1" Background="White" CornerRadius="15" 
                               Margin="0,0,15,0" Padding="30" Height="180">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1" Color="Black"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Text="Active Users" FontSize="16" 
                                          Foreground="#FF6C757D" Margin="0,0,0,15"/>
                                
                                <TextBlock x:Name="txtActiveUsers" Grid.Row="1" Text="0" 
                                          FontSize="36" FontWeight="Bold" Foreground="#FF28A745"
                                          VerticalAlignment="Center"/>
                                
                                <StackPanel Grid.Row="2" Orientation="Horizontal">
                                    <TextBlock Text="âœ…" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="can log in" FontSize="14" Foreground="#FF6C757D"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Card 3: Managers -->
                        <Border Grid.Column="2" Background="White" CornerRadius="15" 
                               Margin="0,0,15,0" Padding="30" Height="180">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1" Color="Black"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Text="Managers" FontSize="16" 
                                          Foreground="#FF6C757D" Margin="0,0,0,15"/>
                                
                                <TextBlock x:Name="txtManagerCount" Grid.Row="1" Text="0" 
                                          FontSize="36" FontWeight="Bold" Foreground="#FF6F42C1"
                                          VerticalAlignment="Center"/>
                                
                                <StackPanel Grid.Row="2" Orientation="Horizontal">
                                    <TextBlock Text="ðŸ‘”" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="full access" FontSize="14" Foreground="#FF6C757D"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Card 4: Inactive Users -->
                        <Border Grid.Column="3" Background="White" CornerRadius="15" 
                               Padding="30" Height="180">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1" Color="Black"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Text="Inactive Users" FontSize="16" 
                                          Foreground="#FF6C757D" Margin="0,0,0,15"/>
                                
                                <TextBlock x:Name="txtInactiveUsers" Grid.Row="1" Text="0" 
                                          FontSize="36" FontWeight="Bold" Foreground="#FFDC3545"
                                          VerticalAlignment="Center"/>
                                
                                <StackPanel Grid.Row="2" Orientation="Horizontal">
                                    <TextBlock Text="ðŸš«" FontSize="14" Margin="0,0,8,0"/>
                                    <TextBlock Text="blocked accounts" FontSize="14" Foreground="#FF6C757D"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Users Table -->
                    <Border Background="White" CornerRadius="15" Padding="30">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1"/>
                        </Border.Effect>

                        <StackPanel>
                            <!-- Search -->
                            <Grid Margin="0,0,0,25">
                                <Border Background="#FFF8F9FA" CornerRadius="10" Padding="15,12" 
                                       BorderBrush="#FFDEE2E6" BorderThickness="1" Width="350" HorizontalAlignment="Left">
                                    <Grid>
                                        <TextBlock Text="ðŸ”" FontSize="16" Foreground="#FF6C757D" 
                                                  VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                        <TextBox x:Name="txtSearch" FontSize="14" Foreground="#FF2D3E50"
                                                Background="Transparent" BorderThickness="0"
                                                VerticalAlignment="Center" Padding="30,0,0,0"
                                                TextChanged="Search_TextChanged">
                                            <TextBox.Style>
                                                <Style TargetType="TextBox">
                                                    <Style.Triggers>
                                                        <Trigger Property="Text" Value="">
                                                            <Setter Property="Background">
                                                                <Setter.Value>
                                                                    <VisualBrush Stretch="None" AlignmentX="Left">
                                                                        <VisualBrush.Visual>
                                                                            <TextBlock Text="Search users..." 
                                                                                      Foreground="#FF6C757D" 
                                                                                      FontSize="14" Margin="30,0,0,0"/>
                                                                        </VisualBrush.Visual>
                                                                    </VisualBrush>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBox.Style>
                                        </TextBox>
                                    </Grid>
                                </Border>
                            </Grid>

                            <!-- Table -->
                            <Border BorderBrush="#FFDEE2E6" BorderThickness="1" CornerRadius="15">
                                <StackPanel>
                                    <!-- Header -->
                                    <Border Background="#FF2D3E50" CornerRadius="15,15,0,0" Height="50">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                                <ColumnDefinition Width="1.2*"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" BorderBrush="#FF4A5568" BorderThickness="0,0,1,0" Padding="10,0">
                                                <TextBlock Text="" FontSize="12" FontWeight="SemiBold" Foreground="White" 
                                                          VerticalAlignment="Center" TextAlignment="Center"/>
                                            </Border>
                                            <Border Grid.Column="1" BorderBrush="#FF4A5568" BorderThickness="0,0,1,0" Padding="15,0">
                                                <TextBlock Text="Full Name" FontSize="12" FontWeight="SemiBold" Foreground="White" 
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                            <Border Grid.Column="2" BorderBrush="#FF4A5568" BorderThickness="0,0,1,0" Padding="15,0">
                                                <TextBlock Text="Username" FontSize="12" FontWeight="SemiBold" Foreground="White" 
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                            <Border Grid.Column="3" BorderBrush="#FF4A5568" BorderThickness="0,0,1,0" Padding="15,0">
                                                <TextBlock Text="Role" FontSize="12" FontWeight="SemiBold" Foreground="White" 
                                                          VerticalAlignment="Center" TextAlignment="Center"/>
                                            </Border>
                                            <Border Grid.Column="4" BorderBrush="#FF4A5568" BorderThickness="0,0,1,0" Padding="15,0">
                                                <TextBlock Text="Email" FontSize="12" FontWeight="SemiBold" Foreground="White" 
                                                          VerticalAlignment="Center"/>
                                            </Border>
                                            <Border Grid.Column="5" BorderBrush="#FF4A5568" BorderThickness="0,0,1,0" Padding="15,0">
                                                <TextBlock Text="Status" FontSize="12" FontWeight="SemiBold" Foreground="White" 
                                                          VerticalAlignment="Center" TextAlignment="Center"/>
                                            </Border>
                                            <Border Grid.Column="6" BorderBrush="#FF4A5568" BorderThickness="0,0,1,0" Padding="15,0">
                                                <TextBlock Text="Last Login" FontSize="12" FontWeight="SemiBold" Foreground="White" 
                                                          VerticalAlignment="Center" TextAlignment="Center"/>
                                            </Border>
                                            <Border Grid.Column="7" Padding="15,0">
                                                <TextBlock Text="Created" FontSize="12" FontWeight="SemiBold" Foreground="White" 
                                                          VerticalAlignment="Center" TextAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                    </Border>

                                    <!-- User Rows -->
                                    <StackPanel x:Name="usersStackPanel"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- FLOATING ACTION BUTTONS POPUP -->
            <Popup x:Name="actionButtonsPopup" Placement="MousePoint" StaysOpen="True"
                   AllowsTransparency="True" Closed="ActionButtonsPopup_Closed">
                <Border Background="White" CornerRadius="8" Padding="8"
                       BorderThickness="1" BorderBrush="#FFDEE2E6">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel x:Name="actionButtonsPanel" Orientation="Horizontal">
                        <!-- Buttons will be added dynamically -->
                    </StackPanel>
                </Border>
            </Popup>
        </Grid>

        <!-- ADD/EDIT USER MODAL OVERLAY -->
        <Grid x:Name="modalOverlay" Grid.ColumnSpan="2" Visibility="Collapsed"
              Background="#AA000000" Panel.ZIndex="1000">
            <Border Width="550" MaxHeight="700" Background="White" CornerRadius="15"
                   VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#FF2D3E50" CornerRadius="15,15,0,0" Padding="30,20">
                        <Grid>
                            <TextBlock x:Name="txtModalTitle" Text="Add New User" FontSize="22"
                                      FontWeight="Bold" Foreground="White"/>
                            <Button Content="âœ•" HorizontalAlignment="Right" VerticalAlignment="Center"
                                   Background="Transparent" Foreground="White" BorderThickness="0"
                                   FontSize="18" Cursor="Hand" Click="CloseModal_Click"
                                   Width="30" Height="30"/>
                        </Grid>
                    </Border>

                    <!-- Form Content with ScrollViewer -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30,20">
                        <StackPanel>
                            <!-- First Name -->
                            <TextBlock Text="First Name *" FontSize="13" FontWeight="SemiBold" 
                                      Foreground="#FF2D3E50" Margin="0,0,0,8"/>
                            <TextBox x:Name="txtModalFirstName" Height="45" FontSize="14" Padding="15,12"
                                    Background="#FFF8F9FA" BorderBrush="#FFDEE2E6" BorderThickness="1"
                                    Foreground="#FF2D3E50" Margin="0,0,0,15"/>

                            <!-- Last Name -->
                            <TextBlock Text="Last Name *" FontSize="13" FontWeight="SemiBold" 
                                      Foreground="#FF2D3E50" Margin="0,0,0,8"/>
                            <TextBox x:Name="txtModalLastName" Height="45" FontSize="14" Padding="15,12"
                                    Background="#FFF8F9FA" BorderBrush="#FFDEE2E6" BorderThickness="1"
                                    Foreground="#FF2D3E50" Margin="0,0,0,15"/>

                            <!-- Username -->
                            <TextBlock Text="Username *" FontSize="13" FontWeight="SemiBold" 
                                      Foreground="#FF2D3E50" Margin="0,0,0,8"/>
                            <TextBox x:Name="txtModalUsername" Height="45" FontSize="14" Padding="15,12"
                                    Background="#FFF8F9FA" BorderBrush="#FFDEE2E6" BorderThickness="1"
                                    Foreground="#FF2D3E50" Margin="0,0,0,15"/>

                            <!-- Email -->
                            <TextBlock Text="Email" FontSize="13" FontWeight="SemiBold" 
                                      Foreground="#FF2D3E50" Margin="0,0,0,8"/>
                            <TextBox x:Name="txtModalEmail" Height="45" FontSize="14" Padding="15,12"
                                    Background="#FFF8F9FA" BorderBrush="#FFDEE2E6" BorderThickness="1"
                                    Foreground="#FF2D3E50" Margin="0,0,0,15"/>

                            <!-- Phone -->
                            <TextBlock Text="Phone" FontSize="13" FontWeight="SemiBold" 
                                      Foreground="#FF2D3E50" Margin="0,0,0,8"/>
                            <TextBox x:Name="txtModalPhone" Height="45" FontSize="14" Padding="15,12"
                                    Background="#FFF8F9FA" BorderBrush="#FFDEE2E6" BorderThickness="1"
                                    Foreground="#FF2D3E50" Margin="0,0,0,15"/>

                            <!-- Role -->
                            <TextBlock Text="Role *" FontSize="13" FontWeight="SemiBold" 
                                      Foreground="#FF2D3E50" Margin="0,0,0,8"/>
                            <ComboBox x:Name="cmbModalRole" Height="45" FontSize="14" Padding="15,0"
                                     Background="#FFF8F9FA" BorderBrush="#FFDEE2E6" BorderThickness="1"
                                     Foreground="#FF2D3E50" Margin="0,0,0,15">
                                <ComboBoxItem Content="Operator" IsSelected="True"/>
                                <ComboBoxItem Content="Cashier"/>
                                <ComboBoxItem Content="Supervisor"/>
                                <ComboBoxItem Content="Manager"/>
                            </ComboBox>

                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer with buttons -->
                    <Border Grid.Row="2" Background="#FFF8F9FA" CornerRadius="0,0,15,15" Padding="30,20">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Cancel" Width="100" Height="42" Margin="0,0,10,0"
                                   Background="#FF6C757D" Foreground="White" BorderThickness="0"
                                   FontSize="14" Cursor="Hand" Click="CloseModal_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button x:Name="btnSaveUser" Content="Create User" Width="130" Height="42"
                                   Background="#FF28A745" Foreground="White" BorderThickness="0"
                                   FontSize="14" FontWeight="SemiBold" Cursor="Hand" Click="SaveUser_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF218838"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- RESET PASSWORD MODAL -->
        <Grid x:Name="resetPasswordOverlay" Grid.ColumnSpan="2" Visibility="Collapsed"
              Background="#AA000000" Panel.ZIndex="1001">
            <Border Width="450" Background="White" CornerRadius="15"
                   VerticalAlignment="Center" HorizontalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#FF17A2B8" CornerRadius="15,15,0,0" Padding="30,20">
                        <Grid>
                            <TextBlock Text="Reset Password" FontSize="22" FontWeight="Bold" Foreground="White"/>
                            <Button Content="âœ•" HorizontalAlignment="Right" VerticalAlignment="Center"
                                   Background="Transparent" Foreground="White" BorderThickness="0"
                                   FontSize="18" Cursor="Hand" Click="CloseResetPasswordModal_Click"
                                   Width="30" Height="30"/>
                        </Grid>
                    </Border>

                    <!-- Content -->
                    <StackPanel Grid.Row="1" Margin="30,20">
                        <TextBlock x:Name="txtResetPasswordUser" Text="User: Admin User" FontSize="14" 
                                  Foreground="#FF6C757D" Margin="0,0,0,20"/>

                        <TextBlock Text="New Password *" FontSize="13" FontWeight="SemiBold" 
                                  Foreground="#FF2D3E50" Margin="0,0,0,8"/>
                        <TextBox x:Name="txtNewPassword" Height="45" FontSize="14" Padding="15,12"
                                Background="#FFF8F9FA" BorderBrush="#FFDEE2E6" BorderThickness="1"
                                Foreground="#FF2D3E50" Margin="0,0,0,15"/>

                        <TextBlock Text="Confirm Password *" FontSize="13" FontWeight="SemiBold" 
                                  Foreground="#FF2D3E50" Margin="0,0,0,8"/>
                        <TextBox x:Name="txtConfirmPassword" Height="45" FontSize="14" Padding="15,12"
                                Background="#FFF8F9FA" BorderBrush="#FFDEE2E6" BorderThickness="1"
                                Foreground="#FF2D3E50" Margin="0,0,0,5"/>
                        <TextBlock Text="Minimum 6 characters" FontSize="11" Foreground="#FF6C757D"/>
                    </StackPanel>

                    <!-- Footer -->
                    <Border Grid.Row="2" Background="#FFF8F9FA" CornerRadius="0,0,15,15" Padding="30,20">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Cancel" Width="100" Height="42" Margin="0,0,10,0"
                                   Background="#FF6C757D" Foreground="White" BorderThickness="0"
                                   FontSize="14" Cursor="Hand" Click="CloseResetPasswordModal_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <Button Content="Reset Password" Width="140" Height="42"
                                   Background="#FF17A2B8" Foreground="White" BorderThickness="0"
                                   FontSize="14" FontWeight="SemiBold" Cursor="Hand" Click="ConfirmResetPassword_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF138496"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
